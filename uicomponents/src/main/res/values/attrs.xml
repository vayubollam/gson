<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="suncorTextInputStyle" format="reference" />
    <declare-styleable name="SuncorTextInputLayout">
        <attr name="android:hint" format="string" />
        <attr name="android:maxLength" format="integer" />
        <attr name="android:enabled" format="boolean" />
        <!-- textAppearance of the hint. When the hint is expanded the it will have the same size as the editText -->
        <attr name="hintTextAppearance" format="reference" />
        <attr name="hintTextColor" format="color" />
        <attr name="android:inputType" />
        <attr name="android:textAppearance" />
        <attr name="errorTextAppearance" format="reference" />
        <!-- color to be applied on error -->
        <attr name="errorColor" format="color" />
        <attr name="passwordToggleEnabled" format="boolean" />
        <attr name="passwordToggleTint" format="color" />
        <attr name="errorDrawable" format="reference" />
        <attr name="text" format="string" />
        <attr name="error" format="string" />
    </declare-styleable>

    <attr name="suncorAppBarLayoutStyle" format="reference" />
    <declare-styleable name="SuncorAppBarLayout">
        <attr name="title" format="string" />
        <attr name="expandedTitle" format="string" />
        <attr name="titleAppearance" format="reference" />
        <attr name="expandedTitleAppearance" format="reference" />
        <attr name="navigationVisibility" format="boolean" />
        <!-- control status bar color-->
        <attr name="statusBarScrim" format="color" />
        <!-- disables expanded title view, and removes elevation -->
        <attr name="expandable" format="boolean" />
        <!-- controls whether the appbar layout can be dragged -->
        <attr name="dragable" format="boolean" />
        <attr name="rightButtonIcon" format="reference" />
    </declare-styleable>

    <declare-styleable name="SwipeLayout">
        <attr name="drag_edge">
            <flag name="left" value="1" />
            <flag name="right" value="2" />
            <flag name="top" value="4" />
            <flag name="bottom" value="8" />
        </attr>
        <attr name="leftEdgeSwipeOffset" format="dimension" />
        <attr name="rightEdgeSwipeOffset" format="dimension" />
        <attr name="topEdgeSwipeOffset" format="dimension" />
        <attr name="bottomEdgeSwipeOffset" format="dimension" />
        <attr name="show_mode" format="enum">
            <enum name="lay_down" value="0" />
            <enum name="pull_out" value="1" />
        </attr>
        <attr name="clickToClose" format="boolean" />
    </declare-styleable>
    <declare-styleable name="BaseCircleIndicator">
        <attr name="ci_width" format="dimension" />
        <attr name="ci_height" format="dimension" />
        <attr name="ci_margin" format="dimension" />
        <attr name="ci_animator" format="reference" />
        <attr name="ci_animator_reverse" format="reference" />
        <attr name="ci_drawable" format="reference" />
        <attr name="ci_drawable_unselected" format="reference" />

        <attr name="ci_orientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>

        <attr name="ci_gravity">
            <flag name="top" value="0x30" />
            <flag name="bottom" value="0x50" />
            <flag name="left" value="0x03" />
            <flag name="right" value="0x05" />
            <flag name="center_vertical" value="0x10" />
            <flag name="fill_vertical" value="0x70" />
            <flag name="center_horizontal" value="0x01" />
            <flag name="fill_horizontal" value="0x07" />
            <flag name="center" value="0x11" />
            <flag name="fill" value="0x77" />
            <flag name="clip_vertical" value="0x80" />
            <flag name="clip_horizontal" value="0x08" />
            <flag name="start" value="0x00800003" />
            <flag name="end" value="0x00800005" />
        </attr>

    </declare-styleable>

    <declare-styleable name="ExpandableCardView">
        <attr name="header_title" format="string" />
        <attr name="expanded_title" format="string" />
        <attr name="title_size" format="dimension" />
        <attr name="title_color" format="color" />
        <attr name="title_background_color" format="color" />
        <attr name="item_inner_view" format="reference" />
        <attr name="expand_icon" format="reference" />
        <attr name="collapse_icon" format="reference" />

    </declare-styleable>
</resources>