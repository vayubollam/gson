<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="vm"
            type="suncor.com.android.fragments.StationViewModel" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginStart="@dimen/stationCardMargin"
            android:layout_marginEnd="@dimen/stationCardMargin"
            android:theme="@style/Widget.MaterialComponents.CardView"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="16dp">


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_bottom_sheet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="4dp"
                    app:srcCompat="@drawable/bottom_sheet_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_station_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:layout_weight="1"
                        android:text="@{vm.station.address.addressLine}"
                        android:textAppearance="@style/TitleStyle"
                        tools:text="Station Name" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/close_btn"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center_vertical"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_clear" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/addressLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_locations" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:gravity="center"
                        android:text="@{vm.station.address.addressLine}"
                        android:textAppearance="@style/NormalText"
                        tools:text="Station address" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical">

                    <ProgressBar
                        android:id="@+id/br_km_card"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:visibility="@{vm.distanceDuration != null? View.GONE : View.VISIBLE}" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_car_station"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="@{vm.distanceDuration != null? View.VISIBLE : View.GONE}"
                        app:srcCompat="@drawable/ic_car" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_km_station"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:gravity="center"
                        android:text="@{@string/distance_generic(vm.distanceDuration.distance, vm.distanceDuration.duration)}"
                        android:textAppearance="@style/NormalText"
                        android:visibility="@{vm.distanceDuration != null? View.VISIBLE : View.GONE}"
                        tools:text="0.5 Km away . 2 min drive" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_clock_station"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_clock" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_station_open"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:gravity="center"
                        android:text="@{vm.isOpen24Hrs()?@string/station_open_24hrs:vm.isOpen()?@string/open_generic(vm.getCloseHour()) : @string/close_generic(vm.getOpenHour())}"
                        android:textAppearance="@style/NormalText"
                        tools:text="Open, closes at 12:00 AM" />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_card_directions"
                    style="@style/DirectionsButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/directions_button" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/station_details_separator" />

                <androidx.core.widget.NestedScrollView
                    android:id="@+id/detailsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:background="@android:color/transparent"
                            android:drawableLeft="@drawable/ic_favorite_border_black_24dp"
                            android:drawablePadding="16dp"
                            android:gravity="left|center_vertical"
                            android:text="@string/add_to_favourites_button"
                            android:textAllCaps="false" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="16dp"
                            android:background="@drawable/station_details_separator" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:background="@android:color/transparent"
                            android:drawableLeft="@drawable/ic_phone"
                            android:drawablePadding="16dp"
                            android:gravity="left|center_vertical"
                            android:text="@{@string/call_generic(vm.station.address.phone)}"
                            android:textAllCaps="false"
                            tools:text="Call . (123)456-7890" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@drawable/station_details_separator" />

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/SubtitleStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="16dp"
                            android:text="@string/amenities_list_title" />

                        <LinearLayout
                            android:id="@+id/service_amenities_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="16dp"
                            android:orientation="vertical"
                            android:visibility="@{vm.station.hasService()?View.VISIBLE:View.GONE}">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/services_amenities"
                                android:textColor="@color/black_100"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="8dp"/>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/service_amenities_text"
                                style="@style/SecondaryText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="6dp"
                                app:amenitieType="@{0}"
                                app:station="@{vm.station}"
                                tools:text="Pay at pump\nContactless payment" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/fuel_amenities_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="16dp"
                            android:orientation="vertical"
                            android:visibility="@{vm.station.hasFuelOptions()?View.VISIBLE:View.GONE}">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/fuel_amenities"
                                android:textColor="@color/black_100"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="8dp"/>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/fuel_amenities_text"
                                style="@style/SecondaryText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="6dp"
                                app:amenitieType="@{1}"
                                app:station="@{vm.station}"
                                tools:text="Pay at pump\nContactless payment" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/wash_amenities_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="16dp"
                            android:orientation="vertical"
                            android:visibility="@{vm.station.hasWashOptions()?View.VISIBLE:View.GONE}">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/carwash_amenities"
                                android:textColor="@color/black_100"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="8dp"/>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/wash_amenities_text"
                                style="@style/SecondaryText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="6dp"
                                app:amenitieType="@{2}"
                                app:station="@{vm.station}"
                                tools:text="Pay at pump\nContactless payment" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:background="@drawable/station_details_separator" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingStart="16dp"
                            android:paddingBottom="16dp">

                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/SubtitleStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="16dp"
                                android:text="@string/hours_list_title" />

                            <include
                                layout="@layout/hour_line"
                                app:dayName="@{vm.getDayName(1)}"
                                app:workHour="@{vm.getWorkHours(1)}" />

                            <include
                                layout="@layout/hour_line"
                                app:dayName="@{vm.getDayName(2)}"
                                app:workHour="@{vm.getWorkHours(2)}" />

                            <include
                                layout="@layout/hour_line"
                                app:dayName="@{vm.getDayName(3)}"
                                app:workHour="@{vm.getWorkHours(3)}" />

                            <include
                                layout="@layout/hour_line"
                                app:dayName="@{vm.getDayName(4)}"
                                app:workHour="@{vm.getWorkHours(4)}" />

                            <include
                                layout="@layout/hour_line"
                                app:dayName="@{vm.getDayName(5)}"
                                app:workHour="@{vm.getWorkHours(5)}" />

                            <include
                                layout="@layout/hour_line"
                                app:dayName="@{vm.getDayName(6)}"
                                app:workHour="@{vm.getWorkHours(6)}" />

                            <include
                                layout="@layout/hour_line"
                                app:dayName="@{vm.getDayName(0)}"
                                app:workHour="@{vm.getWorkHours(0)}" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>
</layout>
