<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="isLoading"
            type="androidx.databinding.ObservableBoolean" />
        <variable
            name="vm"
            type="suncor.com.android.ui.main.carwash.reload.CarwashTransactionViewModel" />
    </data>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_4"
            android:orientation="vertical">

        <suncor.com.android.uicomponents.SuncorAppBarLayout
                android:id="@+id/app_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="@{@string/reload_season_pass(vm.getCardName())}" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/footer_layout"
            android:layout_below="@+id/app_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/header_petropoints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:gravity="center"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:text="@{@string/authorization_petropoints_balance(vm.petroPointsBalance)}"
                android:textColor="@color/black_80"
                app:autoSizeTextType="uniform"
                android:textStyle="bold"
                tools:text="You're starting at 2,500 points" />

            <suncor.com.android.uicomponents.dropdown.ExpandableCardView
                android:id="@+id/cards_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:header_title="@string/card"
                app:title_color="@color/black_80"
                app:title_size="16sp"
                app:expanded_title="@string/select_cards_to_reload"
                android:paddingVertical="16dp"
                android:layout_marginTop="16dp" />


            <suncor.com.android.uicomponents.dropdown.ExpandableCardView
                android:id="@+id/values_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:header_title="@string/select_value"
                app:title_color="@color/black_80"
                app:title_size="16sp"
                app:expanded_title="@string/select_value_to_reload"
                android:layout_marginTop="1dp" />

            <suncor.com.android.uicomponents.dropdown.ExpandableCardView
                android:id="@+id/payment_expandable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:header_title="@string/payment"
                app:title_color="@color/black_80"
                app:title_size="16sp"
                app:expanded_title="@string/select_payment_method"
                android:layout_marginTop="1dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                app:cardBackgroundColor="@color/white"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/payment_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textColor="@color/black_80"
                        android:text="@string/payment"
                        app:autoSizeTextType="uniform"
                        android:visibility="visible" />

                    <ImageButton
                        android:id="@+id/payment_image_button_expand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:src="@drawable/ic_keyboard_arrow_down" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/footer_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:background="@color/white"
            android:layout_gravity="center">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:padding="16dp"
                    android:text="@string/taxes"
                    app:autoSizeTextType="uniform"
                    android:visibility="visible" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tax_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:paddingRight="16dp"
                    android:paddingTop="16dp"
                    android:textStyle="normal"
                    android:layout_alignParentRight="true"
                    app:autoSizeTextType="uniform"
                    android:visibility="visible" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:background="@color/black_4"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/heading_preauthorize"
                    style="@style/Headline1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:padding="16dp"
                    android:text="@string/transaction_total"
                    app:autoSizeTextType="uniform"
                    android:visibility="visible" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/total_amount"
                    style="@style/Headline1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:paddingRight="16dp"
                    android:paddingTop="16dp"
                    android:layout_alignParentRight="true"
                    app:autoSizeTextType="uniform"
                    android:visibility="visible" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:background="@color/black_4"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/terms_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:padding="16dp"
                android:text="@string/carwash_payment_term_aggrement"
                android:visibility="visible" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black_4"/>


            <Button
                android:id="@+id/preauthorize_button"
                style="@style/FilledButton.Red.L"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:gravity="center"
                android:textAllCaps="true"
                android:text="@string/confirm_and_pay" />


        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:clickable="true"
            android:visibility="gone"
            app:visibleGone="@{isLoading}">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/progressbar_text"
                style="@style/Headline1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:padding="16dp"
                android:text="@string/payment_in_progress"
                app:autoSizeTextType="uniform"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/progress_layout"
                android:visibility="visible" />

            <FrameLayout
                android:id="@+id/progress_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">

                <ProgressBar
                    android:id="@+id/authorized_progressbar"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:indeterminateTint="@color/red" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/payment_success_image"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/circular_progress"
                    android:visibility="gone"
                    android:tint="@color/red" />

            </FrameLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/progressbar_image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_card"
                android:tint="@color/red" />

        </RelativeLayout>

        <ProgressBar
            android:id="@+id/loading_progress_bar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:indeterminateTint="@color/red" />

    </RelativeLayout>


</layout>