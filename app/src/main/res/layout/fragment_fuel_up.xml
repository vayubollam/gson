<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="isLoading"
            type="androidx.databinding.ObservableBoolean" />
        <variable
            name="vm"
            type="suncor.com.android.ui.main.pap.fuelup.FuelUpViewModel" />
    </data>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_4"
            android:orientation="vertical">

        <suncor.com.android.uicomponents.SuncorAppBarLayout
                android:id="@+id/app_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="@string/select_pump_header" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/footer_layout"
            android:layout_below="@+id/app_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/header_petropoints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:gravity="center"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:text="@{@string/authorization_petropoints_balance(vm.petroPointsBalance)}"
                android:textColor="@color/black_80"
                app:autoSizeTextType="uniform"
                tools:text="You're starting at 2,500 points" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:id="@+id/pump_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:text="@string/pump"
                        android:textColor="@color/black_80"
                        app:autoSizeTextType="uniform"
                        android:visibility="visible" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/pump_number_text"
                        android:textColor="@color/black_80"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:gravity="start"
                        app:autoSizeTextType="uniform"
                        android:visibility="visible" />


                    <ImageButton
                        android:id="@+id/pump_image_button_expand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:src="@drawable/ic_keyboard_arrow_down" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <include
                android:id="@+id/select_pump_layout"
                layout="@layout/fragment_select_pump"/>

            <suncor.com.android.uicomponents.dropdown.ExpandableCardView
                android:id="@+id/fuel_up_limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:header_title="@string/fuel_upto"
                app:title_color="@color/black_80"
                app:title_size="16sp"
                android:layout_marginTop="1dp" />

            <suncor.com.android.uicomponents.dropdown.ExpandableCardView
                android:id="@+id/payment_expandable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:header_title="@string/payment"
                app:title_color="@color/black_80"
                app:title_size="16sp"
                app:expanded_title="Select payment method"
                android:layout_marginTop="1dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                app:cardBackgroundColor="@color/white"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/payment_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textColor="@color/black_80"
                        android:text="@string/payment"
                        app:autoSizeTextType="uniform"
                        android:visibility="visible" />

                    <ImageButton
                        android:id="@+id/payment_image_button_expand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:src="@drawable/ic_keyboard_arrow_down" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/footer_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:background="@color/white"
            android:layout_gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/heading_preauthorize"
                    style="@style/Headline1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:padding="16dp"
                    android:text="@string/pre_authorized"
                    app:autoSizeTextType="uniform"
                    android:visibility="visible" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/total_amount"
                    style="@style/Headline1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:paddingRight="16dp"
                    android:paddingTop="16dp"
                    android:layout_alignParentRight="true"
                    app:autoSizeTextType="uniform"
                    android:visibility="visible" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tax_inclusive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:paddingRight="16dp"
                    android:paddingBottom="16dp"
                    android:layout_below="@+id/total_amount"
                    android:layout_alignRight="@+id/total_amount"
                    android:text="@string/tax_inclusion"
                    app:autoSizeTextType="uniform"
                    android:visibility="visible" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black_4"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/terms_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:padding="16dp"
                android:text="@string/payment_term_aggrement"
                android:visibility="visible" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black_4"/>

            <Button
                android:id="@+id/preauthorize_button"
                style="@style/FilledButton.Red.L"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:gravity="center"
                android:textAllCaps="true"
                android:text="@string/confirm_and_authorized" />


        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:clickable="true"
            app:visibleGone="@{isLoading}">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Headline1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:padding="16dp"
                android:text="@string/authorizing"
                app:autoSizeTextType="uniform"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/authorized_pprogressbar"
                android:visibility="visible" />

            <ProgressBar
                android:id="@+id/authorized_pprogressbar"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:indeterminateTint="@color/red" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_card"
                android:tint="@color/red" />
        </RelativeLayout>






    </RelativeLayout>


</layout>