<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:padding="15dp"
        android:id="@+id/txt_open_with_title"
    android:layout_width="wrap_content"
    android:text="@string/open_with"
    android:textColor="@color/black_100"
    android:textSize="18sp"
    android:textStyle="bold"
    android:layout_height="wrap_content" />

    
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:id="@+id/card_google_maps"
        android:layout_below="@+id/txt_open_with_title"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="15dp"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:id="@+id/txt_google_map"
                android:text="Google Maps"
                android:textColor="@color/black_100"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:id="@+id/card_waze"
        android:layout_below="@+id/card_google_maps"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="15dp"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:id="@+id/txt_waze"
                android:text="Waze"
                android:textColor="@color/black_100"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_below="@+id/card_waze"
        android:layout_height="wrap_content">
       <RelativeLayout
           android:layout_width="match_parent"

           android:layout_height="wrap_content">
           <com.google.android.material.button.MaterialButton
               android:layout_width="wrap_content"
               android:id="@+id/btn_choose_always"
               android:text="@string/always"
               android:backgroundTint="@android:color/transparent"
               android:textColor="@color/blue"
               android:layout_marginRight="24dp"
               android:layout_marginTop="25dp"
               android:layout_marginBottom="26dp"
               android:layout_alignParentRight="true"
               android:layout_height="wrap_content" />
           <com.google.android.material.button.MaterialButton
               android:layout_width="wrap_content"
               android:id="@+id/btn_choose_once"
               android:text="JUST ONCE"
               android:backgroundTint="@android:color/transparent"
               android:textColor="@color/blue"
               android:layout_marginRight="24dp"
               android:layout_marginTop="25dp"
               android:layout_marginBottom="26dp"
               android:layout_toLeftOf="@+id/btn_choose_always"
               android:layout_height="wrap_content" />
       </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>



</RelativeLayout>