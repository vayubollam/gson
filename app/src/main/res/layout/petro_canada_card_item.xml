<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="suncor.com.android.ui.home.cards.CardItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/petro_canada_cards_height"
        android:background="@drawable/petro_canada_card_background"
        android:orientation="vertical"
        android:paddingBottom="@dimen/petro_canada_cards_padding"
        app:elevation="4dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@{item.title}"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:fontFamily="@font/gibson_regular"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Fuel Savings Reward" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/card_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@{item.balance}"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:fontFamily="@font/gibson_semibold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="100 Litres" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>