<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="month"
            type="Integer" />

        <variable
            name="index"
            type="Integer" />

        <variable
            name="vm"
            type="suncor.com.android.ui.main.profile.transcations.TransactionsViewModel" />
    </data>

    <LinearLayout
        app:visibleGone="@{vm.transactions.getValue().keySet().size()>index }"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_4"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_month_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:lineHeight="24sp"
            android:textAllCaps="true"
            android:textAppearance="@style/Caption1"
            android:textColor="@color/black_60"
            android:text="@{month==vm.getCurrentMonth(0) ? @string/transactions_current_month_name : vm.getMonthName(month)}"
            tools:text="MARCH" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="@drawable/horizontal_divider" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/transaction_Recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            tools:itemCount="4"
            tools:listitem="@layout/transaction_item" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/no_transactions_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:visibleGone="@{vm.transactions.getValue().get(month).size()==0}"
            android:text="@string/transactions_no_transactions"
            android:textAlignment="center"
            android:textAppearance="@style/Body"
            android:textColor="@color/black_40" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="@drawable/horizontal_divider" />


    </LinearLayout>
</layout>