<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@color/white"
        tools:context="suncor.com.android.ui.main.rewards.redeem.GiftCardValueConfirmationFragment">

        <View
            android:id="@+id/app_bar_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/horizontal_divider"
            app:layout_constraintTop_toBottomOf="@+id/app_bar" />

        <View
            android:id="@+id/user_points_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/horizontal_divider"
            app:layout_constraintTop_toBottomOf="@+id/user_points_txt" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/user_points_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="@{@string/rewards_signedin_header_balance(CardFormatUtils.formatBalance(vm.sessionManager.profile.pointsBalance))}"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@id/user_points_divider"
            app:layout_constraintTop_toBottomOf="@id/app_bar_divider"
            tools:text="You have 2,500 points" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/redeem_total_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintBottom_toTopOf="@id/redeem_btn"
            tools:visibility="visible">

            <View
                android:id="@+id/redeem_total_down_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/horizontal_divider"
                android:paddingStart="16dp"
                app:layout_constraintTop_toBottomOf="@id/redeem_total_txt" />

            <View
                android:id="@+id/redeem_total_up_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/horizontal_divider"
                android:paddingTop="16dp"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/terms_agreement_down_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/horizontal_divider"
                android:paddingTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/terms_agreement" />

            <View
                android:id="@+id/new_balance_down_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/horizontal_divider"
                android:paddingTop="16dp"
                app:layout_constraintBottom_toBottomOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/redeem_total_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingStart="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="@string/redeem_egoft_total_points"
                android:textAlignment="textStart"
                android:textAppearance="@style/Title2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/redeem_total_points_txt"
                app:layout_constraintTop_toBottomOf="@id/redeem_total_up_divider" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/redeem_new_balance_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:text="@string/redeem_egift_new_balance"
                android:textAppearance="@style/Body"
                app:layout_constraintBottom_toTopOf="@id/new_balance_down_divider"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/redeem_new_points_txt"
                app:layout_constraintTop_toBottomOf="@id/terms_agreement_down_divider" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/redeem_new_points_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="12dp"
                android:textAlignment="textEnd"
                android:textAppearance="@style/Body"
                app:layout_constraintBottom_toTopOf="@id/new_balance_down_divider"
                app:layout_constraintLeft_toRightOf="@id/redeem_new_balance_txt"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/terms_agreement_down_divider"
                tools:text="1 000 points" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/redeem_total_points_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="12dp"
                android:paddingEnd="16dp"
                android:paddingBottom="12dp"
                android:textAlignment="textEnd"
                android:textAppearance="@style/Title2"
                app:layout_constraintLeft_toRightOf="@id/redeem_total_txt"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/redeem_total_up_divider"
                tools:text="10,000 points" />

            <suncor.com.android.ui.common.LinkableTextView
                android:id="@+id/terms_agreement"
                style="@style/Caption1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:lineSpacingMultiplier="1.57"
                android:paddingEnd="16dp"
                android:paddingRight="16dp"
                android:paddingStart="16dp"
                android:text="@string/redeem_terms_agreement"
                android:textAppearance="@style/Caption1"
                android:textColor="@color/black_60"
                android:textColorLink="@color/black_60"
                app:layout_constraintBottom_toTopOf="@id/terms_agreement_down_divider"
                app:layout_constraintTop_toBottomOf="@id/redeem_total_down_divider"
                tools:layout_editor_absoluteX="16dp"
                tools:text="@string/redeem_terms_agreement" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/black_4"
            android:clipToPadding="false"
            android:fillViewport="true"
            app:layout_constraintBottom_toTopOf="@id/redeem_total_layout"
            app:layout_constraintTop_toBottomOf="@id/user_points_divider">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/not_enough_point_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    tools:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/redeem_value_layout"
                    tools:layout_editor_absoluteX="32dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/alert_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="40dp"
                        android:src="@drawable/ic_alert"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/black_40" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/redeem_egift_not_enough_points"
                        android:textAlignment="center"
                        app:layout_constraintTop_toBottomOf="@id/alert_icon" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/redeem_value_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@color/black_4"
                    android:clipToPadding="false"
                    android:paddingTop="12dp">

                    <View
                        android:id="@+id/card_value_down_divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="16dp"
                        android:background="@drawable/horizontal_divider"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/card_value_txt" />

                    <View
                        android:id="@+id/card_value_up_divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/horizontal_divider"
                        android:paddingTop="16dp"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/card_value_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingStart="16dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:text="@string/redeem_egift_card_select_value"
                        android:textAlignment="textStart"
                        android:textAppearance="@style/Title2"
                        app:layout_constraintTop_toBottomOf="@id/card_value_up_divider" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/redeem_address_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/black_4"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@+id/values_recycler_view"
                        tools:visibility="visible">

                        <View
                            android:id="@+id/address_up_divider"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/horizontal_divider"
                            android:paddingTop="16dp"
                            app:layout_constraintTop_toTopOf="parent" />

                        <View
                            android:id="@+id/address_down_divider"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="16dp"
                            android:background="@drawable/horizontal_divider"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/email_address_txt" />

                        <View
                            android:id="@+id/address_layout_down_divider"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="12dp"
                            android:background="@drawable/horizontal_divider"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/redeem_email_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:paddingStart="16dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:text="@{vm.sessionManager.profile.email}"
                            android:textAppearance="@style/Body"
                            app:layout_constraintTop_toBottomOf="@id/address_down_divider"
                            tools:text="hicham@ibm.com" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/redeem_disclaimer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:lineSpacingMultiplier="1.17"
                            android:paddingStart="16dp"
                            android:paddingTop="12dp"
                            android:paddingEnd="16dp"
                            android:paddingBottom="20dp"
                            android:text="@string/redeem_egift_address_disclaimer"
                            android:textAppearance="@style/Body"
                            android:textColor="@color/black_60"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toTopOf="@id/address_layout_down_divider"
                            app:layout_constraintTop_toBottomOf="@id/redeem_email_address" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/email_address_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:paddingStart="16dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:text="@string/redeem_egift_address_title"
                            android:textAlignment="textStart"
                            android:textAppearance="@style/Title2"
                            app:layout_constraintTop_toBottomOf="@id/address_up_divider" />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/values_recycler_view"
                        android:layout_width="match_parent"
                        android:elevation="-2dp"
                        android:layout_height="wrap_content"
                        android:background="@color/black_4"
                        android:clipToPadding="false"
                        app:layout_constraintTop_toBottomOf="@id/card_value_down_divider" />


                    <suncor.com.android.ui.common.SuncorButton
                        android:id="@+id/change_value_btn"
                        style="@style/LinkButton.Red.M"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:text="@string/redeem_egift_change_btn"
                        android:alpha="0"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="@id/card_value_txt"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/card_value_txt" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <suncor.com.android.ui.common.SuncorButton
            android:id="@+id/redeem_btn"
            style="@style/FilledButton.Red.M"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/redeem_egift_confirm_and_redeem"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:visibility="visible" />

        <suncor.com.android.uicomponents.SuncorAppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:expandable="false"
            app:layout_constraintTop_toTopOf="parent"
            app:title="@{vm.merchantItem.localizedMerchantName}" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <data>

        <import type="suncor.com.android.ui.common.cards.CardFormatUtils" />

        <variable
            name="vm"
            type="suncor.com.android.ui.main.rewards.redeem.GiftCardValueConfirmationViewModel" />
    </data>
</layout>