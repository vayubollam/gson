<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true">

        <suncor.com.android.uicomponents.SuncorAppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp"
            app:expandable="false"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:lineSpacingMultiplier="1.31"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/carwash_activation_header"
            android:textAppearance="@style/Title1"
            app:layout_constraintTop_toBottomOf="@id/app_bar" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header"
            app:layout_constraintVertical_bias="0.0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/main_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:paddingLeft="16dp"
                android:paddingTop="32dp"
                android:paddingRight="16dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.31"
                    android:paddingBottom="5dp"
                    android:text="@string/carwash_activation_subtitle"
                    android:textColor="@color/black_60"
                    android:fontFamily="@font/gibson_regular"
                    android:textSize="@dimen/carwash_security_subtitle_size"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/pin_input_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="16dp"
                    app:layout_constraintBottom_toTopOf="@id/confirm_button"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/subtitle">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/pin_num1"
                        android:layout_width="@dimen/carwash_verfication_input_width"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/carwash_verification_input_margin"
                        android:background="@drawable/input_field_background"
                        android:fontFamily="@font/gibson_regular"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:maxLength="1"
                        android:paddingBottom="12dp"
                        android:textCursorDrawable="@drawable/cursor"
                        android:textSize="@dimen/carwash_verfication_input_textsize"
                        tools:text="0" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/pin_num2"
                        android:layout_width="@dimen/carwash_verfication_input_width"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/carwash_verification_input_margin"
                        android:background="@drawable/input_field_background"
                        android:fontFamily="@font/gibson_regular"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:maxLength="1"
                        android:paddingBottom="12dp"
                        android:textCursorDrawable="@drawable/cursor"
                        android:textSize="@dimen/carwash_verfication_input_textsize"
                        tools:text="0" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/pin_num3"
                        android:layout_width="@dimen/carwash_verfication_input_width"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_field_background"
                        android:fontFamily="@font/gibson_regular"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:maxLength="1"
                        android:paddingBottom="12dp"
                        android:textCursorDrawable="@drawable/cursor"
                        android:textSize="@dimen/carwash_verfication_input_textsize"
                        tools:text="0" />

                </LinearLayout>

                <suncor.com.android.ui.common.SuncorButton
                    android:id="@+id/confirm_button"
                    style="@style/FilledButton.Red.L"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="@string/carwash_activation_confirm_button"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="1" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>