<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="isLoading"
            type="androidx.databinding.ObservableBoolean" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_4"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="100dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black_4"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp">


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="50dp"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="12dp"
                        app:contentPadding="20dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/transaction_greetings"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="78dp"
                                android:text="@string/thank_you_carwash"
                                android:textAlignment="center"
                                style="@style/Title2" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="@string/carwash_activated_copy"
                                android:textAlignment="center"
                                style="@style/Body2"
                                android:lineSpacingMultiplier="1.25"/>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/remaining_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="@string/carwash_remaining_copy"
                                android:textAlignment="center"
                                style="@style/Body2"
                                android:lineSpacingMultiplier="1.25"/>


                            <suncor.com.android.ui.common.LinkableTextView
                                android:id="@+id/card_zero_balance_description"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:lineSpacingMultiplier="1.57"
                                android:paddingTop="8dp"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                android:paddingBottom="16dp"
                                android:textColor="@color/black_60"
                                android:text="@string/cards_zero_balance_description"
                                android:textAppearance="@style/Caption1"
                                android:visibility="gone"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/pump_layout"
                        android:layout_width="160dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="16dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="16dp"
                        app:cardUseCompatPadding="false">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="80dp"
                                android:layout_height="match_parent"
                                app:srcCompat="@drawable/ic_wash_car" />
                        </FrameLayout>

                    </androidx.cardview.widget.CardView>


                </RelativeLayout>

            </LinearLayout>
        </ScrollView>

        <suncor.com.android.ui.common.SuncorButton
            android:id="@+id/button_done"
            style="@style/FilledButton.Red.L"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="20dp"
            android:text="@string/redeem_done"
            android:textAllCaps="true" />
    </RelativeLayout>
</layout>