<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="suncor.com.android.ui.main.wallet.payments.list.PaymentListItem" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/petro_canada_cards_height"
        android:background="@drawable/petro_canada_card_background"
        android:backgroundTint="@{item.backgroundColor}"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/petro_canada_card_foreground"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/petro_canada_cards_padding"
        tools:backgroundTint="@color/white">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/card_image"
            android:layout_width="48dp"
            android:layout_height="80dp"
            android:elevation="12dp"
            android:src="@{item.cardImage}"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/petro_points_card" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/card_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:gravity="end"
            android:lines="1"
            android:text="@{item.paymentType.name()}"
            android:textColor="@{item.textColor}"
            android:textSize="14sp"
            app:fontFamily="@font/gibson_regular"
            tools:text="VISA" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/card_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:gravity="end"
            android:lines="1"
            android:text="@{item.cardNumber}"
            android:textColor="@{item.textColor}"
            android:textSize="16sp"
            app:fontFamily="@font/gibson_semibold"
            tools:text="\u2022\u2022\u2022\u20222345" />
    </LinearLayout>
</layout>