<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="suncor.com.android.model.Resource" />

        <variable
            name="vm"
            type="suncor.com.android.ui.home.dashboard.DashboardViewModel"></variable>

        <variable
            name="isLoading"
            type="androidx.databinding.ObservableBoolean" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingTop="16dp"
        tools:context="suncor.com.android.ui.home.dashboard.DashboardFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/carousel_card_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/station_card"
            android:clipToPadding="false"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/station_card"
            android:layout_width="match_parent"
            android:layout_height="166dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="16dp"
            android:clipChildren="false"
            android:elevation="12dp"
            android:padding="16dp"
            app:cardCornerRadius="12dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:clipToPadding="false">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/station_title_text"
                    style="@style/Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_bottom_sheet"
                    android:fontFamily="@font/gibson_semibold"
                    android:text="@string/dashboard_nearby_card_title"
                    android:textAllCaps="true" />

                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_below="@id/station_title_text"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="16dp"
                    android:layout_toRightOf="@id/img_car_station"
                    android:visibility="gone" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_car_station"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_below="@+id/station_title_text"
                    android:layout_marginTop="16dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/station_title_text"
                    app:srcCompat="@drawable/ic_car" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/distance_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/station_title_text"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_toRightOf="@id/img_car_station"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textColor="@color/black_80"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@+id/station_title_text"
                    tools:text="0.5 Km away . 2 min drive" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/open_hours_text"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_below="@+id/img_car_station"
                    android:layout_marginTop="8dp"
                    app:srcCompat="@drawable/ic_clock" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_station_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_car_station"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@+id/open_hours_text"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="@{vm.stationItem.isOpen24Hrs()?@string/station_open_24hrs:vm.stationItem.isOpen()?@string/station_open_generic(vm.stationItem.getCloseHour()) : @string/station_closed}"
                    android:textAppearance="@style/Caption1"
                    tools:text="Open, closes at 12:00 AM" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/directions_button"
                    style="@style/LinkButton.Red.M"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/open_hours_text"
                    android:layout_marginLeft="-8dp"
                    android:layout_marginTop="6dp"
                    android:paddingStart="8dp"
                    android:paddingLeft="8dp"
                    android:text="@string/station_directions_button" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:clickable="true"
                android:orientation="vertical"
                android:paddingStart="8dp"
                android:paddingTop="16dp"
                android:paddingEnd="20dp"
                app:visibleGone="@{!vm.locationServiceEnabled}"
                tools:visibility="gone">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/gibson_semibold"
                    android:text="Enable Location Services"
                    android:textAppearance="@style/Body" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="20dp"
                    android:lineSpacingMultiplier="1.71"
                    android:text="Petro-Canada app uses the location services to enhance your experience."
                    android:textAppearance="@style/Caption1"
                    android:textColor="@color/black_80" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/settings_button"
                    style="@style/LinkButton.Red.M"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14dp"
                    android:fontFamily="@font/gibson_semibold"
                    android:paddingStart="10dp"
                    android:paddingTop="6dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="6dp"
                    android:text="@string/station_location_alert_settings"
                    android:textAppearance="@style/Caption1" />
            </LinearLayout>

            <LinearLayout
                app:visibleGone="@{isLoading}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:clickable="true"

                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/gibson_semibold"
                    android:text="Finding nearest locationâ€¦"
                    android:textAppearance="@style/Body" />

                <ProgressBar
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <FrameLayout
            android:id="@+id/welcome_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:clickable="true"
            android:elevation="8dp"
            android:padding="16dp"
            android:visibility="gone">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/welcome_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Title1" />
        </FrameLayout>

    </RelativeLayout>
</layout>