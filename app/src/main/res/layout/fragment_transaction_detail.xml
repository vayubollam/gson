<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="td"
            type="suncor.com.android.model.cards.TransactionDetail" />

        <variable
            name="transaction"
            type="suncor.com.android.model.pap.transaction.Transaction" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <suncor.com.android.uicomponents.SuncorAppBarLayout
            android:id="@+id/transaction_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:title="@{td.getFormattedTitle()}" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_behavior="suncor.com.android.uicomponents.ScrollViewBehaviorFix">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingBottom="16dp"
                tools:context="suncor.com.android.ui.main.profile.transcations.TransactionDetailFragment">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/points_summary_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/transaction_ppt_lbl"
                    android:textAppearance="@style/Caption1"
                    android:textColor="@color/black_60"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:textAllCaps="true" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/points_summary_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/horizontal_divider"
                    app:layout_constraintTop_toBottomOf="@+id/points_summary_txt" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_base_left"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/txt_base_right"
                    app:layout_constraintTop_toBottomOf="@id/points_summary_divider" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_base_right"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:textAlignment="textEnd"
                    app:layout_constraintLeft_toRightOf="@id/txt_base_left"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/points_summary_divider" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_base_points"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/transaction_detail_base_points"
                    visibleGone="@{td.transaction.basePoints > 0}"
                    android:textAppearance="@style/Body"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/txt_base_right"
                    app:layout_constraintTop_toBottomOf="@id/txt_base_left" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_base_points_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:text="@{td.getFormattedBasePoints()}"
                    android:textAlignment="textEnd"
                    visibleGone="@{td.transaction.basePoints > 0}"
                    android:textAppearance="@style/Body"
                    app:layout_constraintLeft_toRightOf="@id/txt_base_left"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_base_left" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/base_points_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    visibleGone="@{td.transaction.basePoints > 0}"
                    android:src="@drawable/horizontal_divider"
                    app:layout_constraintTop_toBottomOf="@+id/txt_base_points" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_bonus_points"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/transaction_detail_bonus_points"
                    visibleGone="@{td.transaction.bonusPoints > 0}"
                    android:textAppearance="@style/Body"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/txt_base_right"
                    app:layout_constraintTop_toBottomOf="@id/base_points_divider" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_bonus_points_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:text="@{td.getFormattedBonusPoints()}"
                    android:textAlignment="textEnd"
                    android:textAppearance="@style/Body"
                    visibleGone="@{td.transaction.bonusPoints > 0}"
                    app:layout_constraintLeft_toRightOf="@id/txt_base_left"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/base_points_divider" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/earned_points_divider"
                    visibleGone="@{td.transaction.bonusPoints > 0}"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/horizontal_divider"
                    app:layout_constraintTop_toBottomOf="@+id/txt_bonus_points" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_redeem_points"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/transaction_detail_redeem_points"
                    visibleGone="@{td.transaction.getRedeemPointsInt() > 0}"
                    android:textAppearance="@style/Body"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/txt_base_right"
                    app:layout_constraintTop_toBottomOf="@id/earned_points_divider" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_redeem_points_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:text="@{td.getFormattedRedeemPoints()}"
                    visibleGone="@{td.transaction.getRedeemPointsInt() > 0}"
                    android:textAlignment="textEnd"
                    android:textAppearance="@style/Body"
                    app:layout_constraintLeft_toRightOf="@id/txt_base_left"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/earned_points_divider" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/redeem_points_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    visibleGone="@{td.transaction.getRedeemPointsInt() > 0}"
                    android:src="@drawable/horizontal_divider"
                    app:layout_constraintTop_toBottomOf="@+id/txt_redeem_points" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_earned_points"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/redeem_egift_new_balance"
                    android:textAppearance="@style/Body"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/txt_base_right"
                    app:layout_constraintTop_toBottomOf="@id/redeem_points_divider" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_earned_points_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:text="@{td.getTransaction().getFormattedTotalPoints()}"
                    android:textAlignment="textEnd"
                    android:textAppearance="@style/Body"
                    app:layout_constraintLeft_toRightOf="@id/txt_base_left"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/redeem_points_divider" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/points_summary_section_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/horizontal_divider"
                    app:layout_constraintTop_toBottomOf="@+id/txt_earned_points" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/details_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="@string/transaction_details_header"
                    android:textAppearance="@style/Caption1"
                    android:textColor="@color/black_60"
                    app:layout_constraintTop_toBottomOf="@+id/points_summary_section_divider"
                    app:textAllCaps="true" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/details_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/horizontal_divider"
                    app:layout_constraintTop_toBottomOf="@+id/details_txt" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/transaction_type_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/transaction_detail_transaction_type"
                    android:textAppearance="@style/Body"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/txt_base_right"
                    app:layout_constraintTop_toBottomOf="@id/details_divider" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/transaction_type_value_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:text="@{td.getFormattedTransactionType()}"
                    android:textAlignment="textEnd"
                    android:textAppearance="@style/Body1"
                    app:layout_constraintLeft_toRightOf="@id/txt_base_left"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/details_divider" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/date_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/horizontal_divider"
                    app:layout_constraintTop_toBottomOf="@+id/transaction_type_txt" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/transaction_date_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/transaction_detail_date"
                    android:textAppearance="@style/Body"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/txt_base_right"
                    app:layout_constraintTop_toBottomOf="@id/date_divider" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/transaction_date_value_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:text="@{td.getTransaction().getFormattedDate()}"
                    android:textAlignment="textEnd"
                    android:textAppearance="@style/Body"
                    app:layout_constraintLeft_toRightOf="@id/txt_base_left"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/date_divider" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/payment_type_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/horizontal_divider"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/transaction_date_value_value" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/payment_type_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/transaction_payment_type"
                    android:textAppearance="@style/Body"
                    android:visibility="gone"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/txt_base_right"
                    app:layout_constraintTop_toBottomOf="@id/payment_type_divider" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/payment_type_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:textAlignment="textEnd"
                    android:textAppearance="@style/Body"
                    android:visibility="gone"
                    app:layout_constraintLeft_toRightOf="@id/txt_base_left"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/payment_type_divider" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/Amount_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/horizontal_divider"
                    app:layout_constraintTop_toBottomOf="@+id/payment_type_value"
                    app:visibleGone="@{!td.getTransaction().getFormattedPurchaseAmount().isEmpty()}" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/transaction_amount_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/transaction_total"
                    android:textAppearance="@style/Body"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/txt_base_right"
                    app:layout_constraintTop_toBottomOf="@id/Amount_divider"
                    app:visibleGone="@{!td.getTransaction().getFormattedPurchaseAmount().isEmpty()}" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/transaction_amount_value_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:text="@{td.getTransaction().getFormattedPurchaseAmount()}"
                    android:textAlignment="textEnd"
                    android:textAppearance="@style/Body"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@id/txt_base_left"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/Amount_divider"
                    app:visibleGone="@{!td.getTransaction().getFormattedPurchaseAmount().isEmpty()}" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/transaction_amount_tax_incl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="@string/transaction_tax_inclusive"
                    android:textAlignment="textEnd"
                    android:textAppearance="@style/Caption1"
                    app:layout_constraintLeft_toRightOf="@id/txt_base_left"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/transaction_amount_value_value"
                    app:visibleGone="@{!td.getTransaction().getFormattedPurchaseAmount().isEmpty()}" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/transaction_total_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/horizontal_divider"
                    app:layout_constraintTop_toBottomOf="@+id/transaction_amount_tax_incl" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/transaction_rbc_saving_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/transaction_your_rbc_savings"
                    android:textAppearance="@style/Body"
                    app:visibleGone="@{transaction.otherDiscount > 0.00}"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/txt_base_right"
                    app:layout_constraintTop_toBottomOf="@id/transaction_total_divider" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/transaction_rbc_saving_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:textAlignment="textEnd"
                    app:visibleGone="@{transaction.otherDiscount > 0.00}"
                    android:text="@{transaction.formattedOtherDiscounts}"
                    android:textAppearance="@style/Body1"
                    app:layout_constraintLeft_toRightOf="@id/txt_base_left"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/transaction_total_divider" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/transaction_rbc_saving_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    app:visibleGone="@{transaction.otherDiscount > 0.00}"
                    android:src="@drawable/horizontal_divider"
                    app:layout_constraintTop_toBottomOf="@+id/transaction_rbc_saving_value" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/location_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="@string/transaction_detail_location_title"
                    android:textAppearance="@style/Caption1"
                    android:textColor="@color/black_60"
                    app:layout_constraintTop_toBottomOf="@+id/transaction_rbc_saving_divider"
                    app:textAllCaps="true" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/location_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/horizontal_divider"
                    app:layout_constraintTop_toBottomOf="@+id/location_txt" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/transaction_location_value_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:lineSpacingMultiplier="1.44"
                    android:text="@{td.getTransaction().locationAddress}"
                    android:textAlignment="textStart"
                    android:textAppearance="@style/Body"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/location_divider" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/location_value_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/horizontal_divider"
                    app:layout_constraintTop_toBottomOf="@+id/transaction_location_value_value"
                    app:visibleGone="@{td.getTransaction().rewardDescription!=null &amp;&amp; td.getTransaction().rewardDescription.length()>0}" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/reword_desc_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="@string/transaction_detail_description_title"
                    android:textAppearance="@style/Caption1"
                    android:textColor="@color/black_60"
                    app:layout_constraintTop_toBottomOf="@+id/location_value_divider"
                    app:textAllCaps="true"
                    app:visibleGone="@{td.getTransaction().rewardDescription!=null &amp;&amp; td.getTransaction().rewardDescription.length()>0}" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/reword_desc_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/horizontal_divider"
                    app:layout_constraintTop_toBottomOf="@+id/reword_desc_txt"
                    app:visibleGone="@{td.getTransaction().rewardDescription!=null &amp;&amp; td.getTransaction().rewardDescription.length()>0}" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/transaction_reword_desc_value_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:lineSpacingMultiplier="1.44"
                    android:text="@{td.getTransaction().rewardDescription}"
                    android:textAlignment="textStart"
                    android:textAppearance="@style/Body"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/reword_desc_divider"
                    app:visibleGone="@{td.getTransaction().rewardDescription!=null &amp;&amp; td.getTransaction().rewardDescription.length()>0}" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/reword_value_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/horizontal_divider"
                    app:layout_constraintTop_toBottomOf="@+id/transaction_reword_desc_value_value" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/view_receipt_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/view_receipt"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    style="@style/LinkButton.Red.L"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/reword_value_divider"
                    android:visibility="gone" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/receipt_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/view_receipt_btn"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="8dp"
                    android:visibility="gone"
                    android:background="@color/white"
                    app:cardUseCompatPadding="false">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/receipt_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:padding="16dp"
                        android:textColor="@color/black_80"
                        android:textSize="16sp"
                        android:visibility="visible" />

                </androidx.cardview.widget.CardView>

                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:visibility="gone"
                     />



            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>