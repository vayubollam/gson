<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="suncor.com.android.ui.enrollement.CardQuestion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:minWidth="@dimen/min_button_dim"
            android:minHeight="@dimen/min_button_dim"
            android:src="@drawable/ic_back_red" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/xtCardQuestionLayout"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtCardQuestionHeader"
                    style="@style/Title1"
                    android:layout_marginTop="32dp"
                    android:textColor="@color/black_80"
                    android:lineSpacingMultiplier="1.31"
                    android:textAlignment="center"
                    android:text="@string/have_card_header" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:id="@+id/txtCardQuestionBody"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:lineSpacingMultiplier="1.44"
                    style="@style/Body"
                    android:textColor="@color/black_60"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textAlignment="center"
                    android:text="@string/card_question_body" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/cardImage"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:layout_height="wrap_content"
                android:src="@drawable/card"
                android:foregroundGravity="center"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/cardShadowImg"
                android:layout_width="wrap_content"
                android:src="@drawable/card_shadow"
                android:layout_marginLeft="90dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:layout_marginTop="32dp"
                android:layout_width="match_parent"
                style="@style/OutlinedLargeButton"
                android:text="@string/yes_i_have_a_card"
                android:layout_height="wrap_content" />

            <com.google.android.material.button.MaterialButton
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                style="@style/OutlinedLargeButton"
                android:text="@string/no_i_don_t_have_a_card"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>


</FrameLayout>
