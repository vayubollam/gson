<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/action_menu_margin_32"
        android:background="@drawable/action_menu_modal_background">

        <View
            android:id="@+id/handle"
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="9dp"
            android:background="@drawable/rounded_dialog_handle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/action_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/action_menu_card_view_margin_left_right"
            android:layout_marginLeft="@dimen/action_menu_card_view_margin_left_right"
            android:layout_marginTop="@dimen/action_menu_margin_32"
            android:layout_marginEnd="@dimen/action_menu_card_view_margin_left_right"
            android:layout_marginRight="@dimen/action_menu_card_view_margin_left_right"
            android:fontFamily="@font/gibson_regular"
            android:textColor="@color/black_60"
            android:textSize="@dimen/action_menu_icon_font_size"
            android:visibility="invisible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/action_location" />

        <TextView
            android:id="@+id/action_welcome_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/action_menu_card_view_margin_left_right"
            android:layout_marginLeft="@dimen/action_menu_card_view_margin_left_right"
            android:layout_marginTop="@dimen/action_menu_margin_32"
            android:layout_marginEnd="@dimen/action_menu_card_view_margin_left_right"
            android:layout_marginRight="@dimen/action_menu_card_view_margin_left_right"
            android:fontFamily="@font/gibson_semibold"
            android:lineSpacingMultiplier="1.15"
            android:text="@string/action_menu_what_would_you_like_to_do"
            android:textColor="@color/black_80"
            android:textSize="@dimen/action_menu_font_size"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/action_location"/>

        <suncor.com.android.ui.common.ActionMenuCardView
            android:id="@+id/action_scan_card_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_menu_card_view_height"
            android:layout_marginStart="@dimen/action_menu_card_view_margin_left_right"
            android:layout_marginLeft="@dimen/action_menu_card_view_margin_left_right"
            android:layout_marginTop="@dimen/action_menu_margin_32"
            android:layout_marginEnd="@dimen/action_menu_card_view_margin_left_right"
            android:layout_marginRight="@dimen/action_menu_card_view_margin_left_right"
            app:button_text="@string/action_menu_scan_card"
            app:icon_src="@drawable/ic_scan_card"
            app:layout_constraintBottom_toTopOf="@+id/action_fuel_up_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/action_welcome_message" />

        <suncor.com.android.ui.common.ActionMenuCardView
            android:id="@+id/action_fuel_up_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_menu_card_view_height"
            android:layout_marginLeft="@dimen/action_menu_card_view_margin_left_right"
            android:layout_marginTop="@dimen/action_menu_margin_12"
            android:layout_marginRight="@dimen/action_menu_card_view_margin_left_right"
            app:button_text="@string/action_fuel_up"
            app:icon_src="@drawable/ic_fuel_up"
            app:layout_constraintBottom_toTopOf="@+id/action_wash_car_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/action_scan_card_button" />

        <suncor.com.android.ui.common.ActionMenuCardView
            android:id="@+id/action_wash_car_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_menu_card_view_height"
            android:layout_marginLeft="@dimen/action_menu_card_view_margin_left_right"
            android:layout_marginTop="@dimen/action_menu_margin_12"
            android:layout_marginRight="@dimen/action_menu_card_view_margin_left_right"
            app:button_text="@string/action_menu_wash_car"
            app:icon_src="@drawable/ic_wash_car"
            app:layout_constraintBottom_toTopOf="@+id/action_account_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/action_fuel_up_button" />

        <suncor.com.android.ui.common.ActionMenuCardView
            android:id="@+id/action_account_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_menu_card_view_height"
            android:layout_marginStart="@dimen/action_menu_card_view_margin_left_right"
            android:layout_marginLeft="@dimen/action_menu_card_view_margin_left_right"
            android:layout_marginTop="@dimen/action_menu_margin_12"
            android:layout_marginEnd="@dimen/action_menu_card_view_margin_left_right"
            android:layout_marginRight="@dimen/action_menu_card_view_margin_left_right"
            android:layout_marginBottom="@dimen/action_menu_margin_32"
            app:button_text="@string/action_menu_account"
            app:icon_src="@drawable/ic_account_tab"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/action_wash_car_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>