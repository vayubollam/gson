<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="suncor.com.android.ui.main.wallet.payments.add.AddPaymentViewModel" />

        <variable
            name="isWebviewLoading"
            type="androidx.databinding.ObservableBoolean" />

        <import type="suncor.com.android.model.Resource" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <suncor.com.android.uicomponents.SuncorAppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/payment_add_fragment_header" />

        <suncor.com.android.ui.common.webview.ObservableWebView
            android:id="@+id/web_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:visibleInvisible="@{!isWebviewLoading}"/>

    </LinearLayout>
</layout>