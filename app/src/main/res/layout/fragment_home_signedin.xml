<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="suncor.com.android.ui.main.home.HomeViewModel" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="true"
                android:paddingBottom="80dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/header_image"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/lake"
                    app:layout_constraintBottom_toBottomOf="@id/greeting_bottom_space"
                    app:layout_constraintTop_toTopOf="parent" />

                <Space
                    android:id="@+id/greeting_bottom_space"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:layout_constraintTop_toBottomOf="@id/header_petropoints" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/header_greetings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="48dp"
                    android:layout_marginEnd="16dp"
                    android:lineSpacingMultiplier="1.29"
                    android:shadowColor="@color/black_80"
                    android:shadowDx="2"
                    android:shadowDy="1"
                    android:shadowRadius="8"
                    android:text="Good Morning,\nMaria!"
                    android:textAppearance="@style/Headline2"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/header_petropoints"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/gibson_semibold"
                    android:lineSpacingMultiplier="1.44"
                    android:shadowColor="@color/black_80"
                    android:shadowDx="2"
                    android:shadowDy="1"
                    android:shadowRadius="8"
                    android:text="You have 2,500 points or $2 off"
                    android:textAppearance="@style/Body"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toBottomOf="@id/header_greetings" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/enrollment_greetings_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="48dp"
                    android:layout_marginEnd="16dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/cards_default_radius"
                    app:cardElevation="2dp"
                    app:layout_constraintTop_toBottomOf="@id/header_petropoints">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clipToPadding="false"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gibson_semibold"
                            android:text="Thank you for joining"
                            android:textAppearance="@style/Body" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="You just earned 2,500 points by creating a Petro-Canada account."
                            android:textAppearance="@style/Caption1" />

                        <com.google.android.material.button.MaterialButton
                            style="@style/LinkButton.Red.M"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="-12dp"
                            android:layout_marginTop="16dp"
                            android:text="Dismiss" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <include
                    android:id="@+id/nearest_card"
                    layout="@layout/home_nearest_card"
                    android:layout_width="match_parent"
                    android:layout_height="166dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toBottomOf="@id/enrollment_greetings_card"
                    app:vm="@{vm}" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/offers_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="460dp"
                    android:layout_marginTop="16dp"
                    android:clipToPadding="false"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    app:layout_constraintTop_toBottomOf="@id/nearest_card"
                    tools:listitem="@layout/dashboard_card" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="130dp"
            android:layout_height="44dp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/red"
                android:gravity="center">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_adding_card"
                    android:tint="@color/white" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/gibson_semibold"
                    android:gravity="center"
                    android:text="Scan card"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>
</layout>