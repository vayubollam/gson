<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="suncor.com.android.ui.main.home.HomeViewModel" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/main_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black_4"
                android:clipChildren="true"
                android:paddingBottom="16dp">

                <FrameLayout
                    android:id="@+id/header_image_layout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="@id/greeting_bottom_to_image"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/header_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="center"
                        android:src="@{context.getDrawable(vm.headerImage)}"
                        tools:src="@drawable/home_backdrop_morning" />

                </FrameLayout>


                <Space
                    android:id="@+id/greeting_bottom_to_image"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:layout_constraintTop_toBottomOf="@id/header_petropoints" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/header_greetings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="48dp"
                    android:layout_marginEnd="16dp"
                    android:lineSpacingMultiplier="1.29"
                    android:shadowColor="@color/black_80"
                    android:shadowDx="2"
                    android:shadowDy="1"
                    android:shadowRadius="8"
                    android:text="@{context.getString(vm.greetingsMessage, vm.userFirstName)}"
                    android:textAppearance="@style/Headline2"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Good Morning,\nMaria!" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/header_petropoints"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/gibson_semibold"
                    android:lineSpacingMultiplier="1.44"
                    android:onClick="@{v -> vm.navigateToPetroPoints()}"
                    android:shadowColor="@color/black_80"
                    android:shadowDx="2"
                    android:shadowDy="1"
                    android:shadowRadius="8"
                    android:text="@{@string/home_signedin_petropoints_balance(vm.petroPointsBalance, vm.petroPointsBalanceConverted)}"
                    android:textAppearance="@style/Body"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toBottomOf="@id/header_greetings"
                    tools:text="You have 2,500 points or $2 off" />

                <Space
                    android:id="@+id/greeting_bottom_to_cards"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    app:layout_constraintTop_toBottomOf="@id/header_petropoints" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/enrollment_greetings_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/cards_default_radius"
                    app:cardElevation="2dp"
                    app:layout_constraintTop_toBottomOf="@id/greeting_bottom_to_cards"
                    app:visibleGone="@{vm.shouldShowEnrollmentRewardsCard()}">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clipToPadding="false"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gibson_semibold"
                            android:lineSpacingMultiplier="1.44"
                            android:text="@string/home_enrollment_greeting_title"
                            android:textAppearance="@style/Body" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:lineSpacingMultiplier="1.60"
                            android:text="@{@string/home_enrollment_greeting(vm.rewardedPoints)}"
                            android:textAppearance="@style/Caption1"
                            tools:text="You just earned 2,500 points by creating a Petro-Canada account." />

                        <suncor.com.android.ui.common.SuncorButton
                            style="@style/LinkButton.Red.M"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="-12dp"
                            android:layout_marginTop="16dp"
                            android:onClick="@{v -> vm.dismissEnrollmentRewardsCard()}"
                            android:text="@string/home_enrollment_greeting_dismiss" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

               <suncor.com.android.ui.common.ActionMenuCardView
                    android:id="@+id/fuelling_session_card"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/action_menu_card_view_height"
                    android:layout_marginStart="@dimen/action_menu_card_view_margin_left_right"
                    android:layout_marginLeft="@dimen/action_menu_card_view_margin_left_right"
                    android:layout_marginEnd="@dimen/action_menu_card_view_margin_left_right"
                    android:layout_marginRight="@dimen/action_menu_card_view_margin_left_right"
                    android:layout_marginBottom="@dimen/action_menu_margin_32"
                    app:button_text="@string/fuelling_about_to_begin"
                    app:visibleGone="@{vm.activeFuellingSession}"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/enrollment_greetings_card"
                   app:cardCornerRadius="@dimen/cards_default_radius"
                   app:cardElevation="2dp"
                   app:rippleColor="@android:color/transparent"/>

             <!--   -->

                <include
                    android:id="@+id/nearest_card"
                    layout="@layout/home_nearest_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toBottomOf="@id/fuelling_session_card"
                    app:vm="@{vm}" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/offers_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="460dp"
                    android:layout_marginTop="16dp"
                    android:clipToPadding="false"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    app:layout_constraintTop_toBottomOf="@id/nearest_card"
                    tools:listitem="@layout/offers_card_item" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </FrameLayout>
</layout>