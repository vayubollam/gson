<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="suncor.com.android.ui.main.home.HomeViewModel" />

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_4"
        android:clipChildren="false">

        <suncor.com.android.uicomponents.SuncorAppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black_4"
            app:elevation="0dp"
            app:expandable="false"
            app:layout_constraintTop_toTopOf="parent" />

        <suncor.com.android.uicomponents.swiperefreshlayout.SwipeRefreshLayout
            android:id="@+id/refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/app_bar">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:clipChildren="false"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fuel_up_offsite_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/carwash_margin_16"
                        android:layout_marginLeft="@dimen/carwash_margin_16"
                        android:layout_marginEnd="@dimen/carwash_margin_16"
                        android:layout_marginRight="@dimen/carwash_margin_16"
                        android:fontFamily="@font/gibson_semibold"
                        android:text="@string/nearest_station_offsite_header"
                        android:textColor="@color/black_80"
                        android:textSize="26sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/app_bar" />


                    <include
                        android:id="@+id/nearest_card"
                        layout="@layout/home_nearest_card"
                        android:layout_width="match_parent"
                        android:layout_height="166dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintTop_toBottomOf="@id/enrollment_greetings_card"
                        app:vm="@{vm}" />

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </suncor.com.android.uicomponents.swiperefreshlayout.SwipeRefreshLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>