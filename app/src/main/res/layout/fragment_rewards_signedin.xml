<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="suncor.com.android.ui.main.rewards.RewardsSignedInViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_4"
        android:clipChildren="false"
        android:clipToPadding="false">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="80dp">

                <FrameLayout
                    android:id="@+id/header_image_layout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="@id/balance_bottom_to_image"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/header_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/member_rewards_banner" />

                </FrameLayout>

                <Space
                    android:id="@+id/balance_bottom_to_image"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:layout_constraintTop_toBottomOf="@id/balance_value" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/balance_petropoints"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="48dp"
                    android:layout_marginEnd="16dp"
                    android:lineSpacingMultiplier="1.29"
                    android:shadowColor="@color/black_80"
                    android:shadowDx="2"
                    android:shadowDy="1"
                    android:shadowRadius="8"
                    android:text="@{@string/rewards_signedin_petropoints_balance(vm.petroPoints)}"
                    android:textAppearance="@style/Headline2"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="You have\n10,500 points" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/balance_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/gibson_semibold"
                    android:lineSpacingMultiplier="1.44"
                    android:shadowColor="@color/black_80"
                    android:shadowDx="2"
                    android:shadowDy="1"
                    android:shadowRadius="8"
                    android:text="@{@string/rewards_signedin_petropoints_value(vm.petroPointsValue)}"
                    android:textAppearance="@style/Body"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toBottomOf="@id/balance_petropoints"
                    tools:text="or $2 off" />

                <Space
                    android:id="@+id/balance_bottom_to_cards"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    app:layout_constraintTop_toBottomOf="@id/balance_value" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rewards_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toBottomOf="@id/balance_bottom_to_cards"
                    tools:listitem="@layout/rewards_list_item" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@color/white"
            android:elevation="4dp"
            android:visibility="invisible">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/rewards_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="?selectableItemBackground"
                android:src="@drawable/ic_info_outline"
                android:tint="@color/black_60"
                app:layout_constraintBottom_toTopOf="@id/divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/rewards_signedin_fragment_header"
                android:textAppearance="@style/Title2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/horizontal_divider"
                app:layout_constraintTop_toBottomOf="@id/header" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/header_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/gibson_semibold"
                android:text="@{@string/rewards_signedin_header_balance(vm.petroPoints)}"
                android:textAppearance="@style/Caption1.Red"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider"
                tools:text="You have 10,500 points" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="130dp"
            android:layout_height="44dp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:onClick="@{v -> vm.navigateToPetroPoints()}"
            app:cardCornerRadius="4dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/scan_btn"
                android:foreground="?selectableItemBackground"
                android:gravity="center">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_barcode"
                    android:tint="@color/white" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/gibson_semibold"
                    android:gravity="center"
                    android:text="@string/home_signedin_scan_button"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>
</layout>