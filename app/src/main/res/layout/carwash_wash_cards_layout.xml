<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="suncor.com.android.ui.main.carwash.CarWashCardViewModel.ViewState" />

        <variable
            name="vm"
            type="suncor.com.android.ui.main.carwash.CarWashCardViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/carwash_margin_16"
        android:layout_marginTop="@dimen/carwash_margin_24"
        android:layout_marginEnd="@dimen/carwash_margin_16"
        android:orientation="vertical"
        app:visibleGone="@{vm.viewState != ViewState.LOADING &amp;&amp; vm.isCardAvailable}">

        <!-- Title card-->
        <View
            android:id="@+id/car_wash_get_wash_card"
            android:layout_width="match_parent"
            android:layout_height="@dimen/carwash_welcome_card_height"
            android:background="@drawable/car_wash_welcome_card_background"
            android:elevation="2dp"
            android:foreground="@drawable/petro_canada_card_foreground"
            android:orientation="vertical"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/description_card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/carwash_margin_16"
            android:layout_marginTop="@dimen/carwash_margin_16"
            android:elevation="2dp"
            android:text="@string/carwash_getwash_header"
            android:textColor="@color/black_80"
            android:textSize="18sp"
            app:fontFamily="@font/gibson_semibold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/car_wash_get_wash_card" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/description_card_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/carwash_margin_16"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="@dimen/carwash_margin_16"
            android:elevation="2dp"
            android:lineSpacingMultiplier="1.21"
            android:textColor="@color/black_60"
            android:textSize="16sp"
            app:fontFamily="@font/gibson_regular"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/description_card_title" />

        <!-- Card List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/car_wash_cards_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/carwash_list_margin_top"
            android:elevation="@dimen/carwash_card_elevation"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/description_card_content"
            tools:listitem="@layout/petro_canada_small_card_item" />

        <!-- Get More Card -->
        <LinearLayout
            android:id="@+id/car_wash_get_more_card"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/car_wash_get_more_card_background"
            android:clipToPadding="false"
            android:elevation="@dimen/carwash_card_elevation"
            android:foreground="@drawable/car_wash_get_more_card_foreground"
            android:paddingBottom="@dimen/petro_canada_cards_padding"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/car_wash_cards_list"
            app:visibleGone="@{vm.isBalanceZero}">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/carwash_margin_16"
                android:layout_marginTop="@dimen/carwash_margin_16"
                android:text="@string/carwash_get_ticket_button"
                android:textAllCaps="true"
                android:textColor="#EC1C2F"
                android:textSize="14sp"
                app:fontFamily="@font/gibson_semibold" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>