<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="isLoading"
            type="androidx.databinding.ObservableBoolean" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/pump_authorized_text"
                style="@style/Title1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:text="@string/pump_authorized"
                android:layout_marginTop="48dp"
                app:autoSizeTextType="uniform"
                android:visibility="visible" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/pump_authorized_subheader"
                style="@style/Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:text="@string/pump_authorized_subheader"
                app:autoSizeTextType="uniform"
                android:visibility="visible" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <androidx.cardview.widget.CardView
                android:layout_width="288dp"
                android:layout_height="288dp"
                android:layout_gravity="center"
                app:cardCornerRadius="144dp"
                app:cardElevation="12dp"
                app:cardUseCompatPadding="false">

                <FrameLayout
                    android:id="@+id/fuel_image_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/ic_fuel_up"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="25dp"
                        android:src="@drawable/ic_leaf"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/pump_number_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="16dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginTop="10dp"
                        tools:text="5"
                        android:textStyle="bold"
                        android:textSize="32sp"
                        android:textColor="@color/white"
                        android:visibility="visible" />

                </FrameLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/fuel_animation_gif"
                    android:layout_marginStart="10dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/border_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:src="@drawable/circle_dash_border"/>

            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <suncor.com.android.ui.common.SuncorButton
                android:id="@+id/cancel_button"
                style="@style/LinkButton.Red.L"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gibson_semibold"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                android:text="@string/cancel"
                tools:text="@string/cancel" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/cancel_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:visibility="gone"
            tools:visibility="gone">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Headline1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:padding="16dp"
                android:text="@string/cancelling"
                app:autoSizeTextType="uniform"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/authorized_progressbar"
                android:visibility="visible" />

            <ProgressBar
                android:id="@+id/authorized_progressbar"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:indeterminateTint="@color/red" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_fuel_up"
                android:tint="@color/red" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:visibleGone="@{isLoading}"
            tools:visibility="gone">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Headline1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:padding="16dp"
                android:text="@string/action_fuelling"
                app:autoSizeTextType="uniform"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/progressbar"
                android:visibility="visible" />

            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:indeterminateTint="@color/red" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_fuel_up"
                android:tint="@color/red" />
        </RelativeLayout>

    </FrameLayout>

</layout>