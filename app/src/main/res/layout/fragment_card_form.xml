<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="suncor.com.android.model.Resource" />

        <variable
            name="vm"
            type="suncor.com.android.ui.enrollment.cardform.CardFormViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <suncor.com.android.uicomponents.SuncorAppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/enrollment_cardform_header" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_behavior="suncor.com.android.uicomponents.ScrollViewBehaviorFix">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/main_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <suncor.com.android.uicomponents.SuncorTextInputLayout
                    android:id="@+id/card_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/enrollment_cardform_card_label"
                    android:inputType="phone"
                    android:maxLength="19"
                    app:error="@{vm.cardNumberField.error}"
                    app:focusChanged="@{(v,b) -> vm.cardNumberField.setHasFocus(b)}"
                    app:layout_constraintBottom_toTopOf="@id/postalcode_input"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:text="@={vm.cardNumberField.text}" />

                <suncor.com.android.uicomponents.SuncorTextInputLayout
                    android:id="@+id/postalcode_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/enrollment_cardform_postalcode_label"
                    android:inputType="textCapCharacters"
                    android:maxLength="7"
                    app:error="@{vm.postalCodeField.error}"
                    app:focusChanged="@{(v,b) -> vm.postalCodeField.setHasFocus(b)}"
                    app:layout_constraintBottom_toTopOf="@id/last_name_input"
                    app:layout_constraintTop_toBottomOf="@id/card_input"
                    app:text="@={vm.postalCodeField.text}" />

                <suncor.com.android.uicomponents.SuncorTextInputLayout
                    android:id="@+id/last_name_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:hint="@string/enrollment_cardform_lastname_label"
                    android:maxLength="20"
                    app:error="@{vm.lastNameField.error}"
                    app:layout_constraintBottom_toTopOf="@id/continue_button"
                    app:layout_constraintTop_toBottomOf="@id/postalcode_input"
                    app:text="@={vm.lastNameField.text}" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/continue_button"
                    style="@style/FilledButton.Red.L"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:onClick="@{() -> vm.validateAndContinue()}"
                    android:text="@string/enrollment_cardform_continue_button"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:clickable="true"
            android:visibility="gone"
            app:visibleGone="@{vm.verifyCard.status == Resource.Status.LOADING | vm.verifyCard.status == Resource.Status.SUCCESS}">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/verifying_card_pd"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="24dp"
                android:text="@{vm.verifyCard.status == Resource.Status.SUCCESS ? @string/enrollment_cardform_card_verified : @string/enrollment_cardform_verifying_card}"
                android:textAppearance="@style/Title1" />

            <ProgressBar
                android:id="@+id/verifying_card_pd"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"

                android:indeterminateTint="@color/red" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:scaleType="centerInside"
                android:src="@drawable/ic_card"
                android:tint="@color/red"
                app:visibleGone="@{vm.verifyCard.status == Resource.Status.LOADING}" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_check"
                android:tint="@color/red"
                app:visibleGone="@{vm.verifyCard.status == Resource.Status.SUCCESS}" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_centerInParent="true"
                android:src="@drawable/circular_ring"
                app:visibleGone="@{vm.verifyCard.status == Resource.Status.SUCCESS}" />
        </RelativeLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
