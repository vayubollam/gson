<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="isLoading"
            type="androidx.databinding.ObservableBoolean" />

        <variable
            name="vm"
            type="suncor.com.android.ui.home.stationlocator.StationsViewModel" />

        <variable
            name="eventHandler"
            type="suncor.com.android.ui.home.stationlocator.StationsFragment" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="suncor.com.android.ui.home.stationlocator.StationsFragment">

        <FrameLayout
            android:id="@+id/mapFragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

        <FrameLayout
            android:id="@+id/filters_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_gray"
            android:paddingTop="60dp"
            android:paddingBottom="8dp"
            android:visibility="gone"
            tools:visibility="visible">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:scrollbars="none">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/filters_chipgroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:singleLine="true">

                    <com.google.android.material.chip.Chip
                        style="@style/ChipStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Open 24h" />
                </com.google.android.material.chip.ChipGroup>
            </HorizontalScrollView>
        </FrameLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/search_button"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:onClick="@{() -> eventHandler.launchSearchFragment()}"
                    android:src="@drawable/ic_search" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/address_search_text"
                    style="@style/SearchTextNormal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:hint="@string/search_an_address"
                    android:maxLines="1"
                    android:onClick="@{() -> eventHandler.launchSearchFragment()}" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/clear_search_button"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:onClick="@{() -> eventHandler.clearSearchText()}"
                    android:src="@drawable/ic_close"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/vertical_divider"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/vertical_divider" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/launch_filters_button"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:background="?selectableItemBackground"
                    android:onClick="@{() -> eventHandler.launchFiltersFragment()}"
                    android:src="@drawable/ic_filters" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <ProgressBar
            android:id="@+id/progress_bar"
            visibleGone="@{isLoading}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

        <androidx.cardview.widget.CardView
            android:id="@+id/status_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="16dp"
            android:theme="@style/Widget.MaterialComponents.CardView"
            android:visibility="gone"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/status_card_title"
                    style="@style/TitleStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/no_stations_found" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/status_card_subtitle"
                    style="@style/SecondaryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/no_stations_filters_applied" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/clear_filters_button"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gibson_semibold"
                    android:onClick="@{() -> vm.clearFilters()}"
                    android:text="@string/cleare_filters_button" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/coordinator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true">


            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                app:cardCornerRadius="12dp"
                app:layout_anchor="@id/card_recycler"
                app:layout_anchorGravity="end|top"
                app:layout_dodgeInsetEdges="bottom">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/my_location_button"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_gravity="center"
                        android:background="?selectableItemBackground"
                        android:foregroundGravity="center"
                        android:onClick="@{() -> eventHandler.locateMe()}"
                        android:src="@drawable/ic_near_me" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/horizontal_divider" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/my_favorites_button"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_gravity="right"
                        android:background="?selectableItemBackground"
                        android:gravity="center"
                        android:src="@drawable/ic_favourites" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/card_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingStart="@dimen/stations_recycler_view_padding"
                android:paddingTop="12dp"
                android:paddingRight="@dimen/stations_recycler_view_padding"
                android:paddingBottom="8dp"
                app:behavior_peekHeight="32dp"
                app:layout_behavior="@string/bottom_sheet_behavior"
                app:layout_insetEdge="bottom" />

        </androidx.coordinatorlayout.widget.CoordinatorLayout>


    </RelativeLayout>
</layout>