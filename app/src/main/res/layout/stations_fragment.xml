<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="suncor.com.android.ui.home.stationlocator.StationsFragment">

    <FrameLayout
        android:id="@+id/mapFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingLeft="14dp"
                android:paddingTop="8dp"
                android:src="@drawable/ic_search" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_toLeftOf="@+id/btn_filters"
                android:id="@+id/txt_search_address"
                android:paddingTop="4dp"
                android:layout_marginLeft="16dp"
                android:hint="@string/search_an_address"
                style="@style/SearchTextNormal"
                android:layout_toRightOf="@+id/btn_search"
                android:layout_marginTop="7dp"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="1dp"
                android:id="@+id/vertical_divider"
                android:layout_toLeftOf="@+id/btn_filters"
                android:src="@drawable/vertical_divider"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="14dp"
                android:layout_gravity="right"
                android:padding="8dp"
                android:id="@+id/btn_filters"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_filters" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>


    <ProgressBar
        android:id="@+id/indeterminateBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_anchor="@id/card_recycler"
            app:layout_anchorGravity="end|top"
            app:layout_dodgeInsetEdges="bottom">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_my_location"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="right"
                android:layout_marginRight="16dp"
                android:backgroundTint="@color/white"
                android:gravity="center"
                android:insetTop="0dp"
                android:insetBottom="1dp"
                android:minHeight="0dp"
                app:cornerRadius="2dp"
                app:icon="@drawable/ic_near_me"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconTint="@color/black_100" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_my_favorites"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_above="@+id/card_recycler"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/white"
                android:gravity="center"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:cornerRadius="2dp"
                app:icon="@drawable/ic_favourites"
                app:iconGravity="textStart"
                app:iconTint="@color/black_100" />
        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/card_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingStart="@dimen/stations_recycler_view_padding"
            android:paddingRight="@dimen/stations_recycler_view_padding"
            android:clipToPadding="false"
            app:behavior_peekHeight="24dp"
            app:layout_behavior="@string/bottom_sheet_behavior"
            app:layout_insetEdge="bottom" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</RelativeLayout>
