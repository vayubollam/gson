<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context="suncor.com.android.fragments.StationsFragment">

<FrameLayout
    android:layout_width="match_parent"
    android:id="@+id/mapFragmentContainer"
    android:layout_height="match_parent">

</FrameLayout>


    <ProgressBar
        android:id="@+id/indeterminateBar"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        />

  <androidx.coordinatorlayout.widget.CoordinatorLayout
      android:layout_width="match_parent"
      android:layout_alignParentBottom="true"
      android:id="@+id/coordinator"
      android:clickable="false"
      android:layout_height="wrap_content">


      <androidx.core.widget.NestedScrollView
          android:id="@+id/stations_bottom_sheet"
          android:layout_width="match_parent"
          app:layout_behavior="@string/bottom_sheet_behavior"
          app:behavior_peekHeight="130dp"
          android:animateLayoutChanges="true"
          android:fitsSystemWindows="true"
          android:clickable="false"
          android:fillViewport="true"
          android:layout_height="wrap_content">


          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:clickable="false"
              android:orientation="vertical">


          <com.google.android.material.button.MaterialButton
              android:gravity="center"
              style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
              android:layout_width="44dp"
              app:iconGravity="textStart"
              android:layout_height="44dp"
              app:iconPadding="0dp"
              app:iconTint="@color/black_100"
              android:layout_gravity="right"
              android:minHeight="0dp"
              android:layout_alignParentRight="true"
              android:id="@+id/btn_my_location"
              android:layout_marginRight="16dp"
              android:layout_above="@id/btn_my_favorites"
              android:backgroundTint="@color/white"
              app:icon="@drawable/ic_near_me"
              android:insetBottom="1dp"
              app:cornerRadius="2dp"
              android:insetTop="0dp"
              />
          <com.google.android.material.button.MaterialButton
              android:gravity="center"
              style="@style/Widget.MaterialComponents.Button.OutlinedButton"
              android:layout_width="44dp"
              app:iconGravity="textStart"
              android:layout_height="44dp"
              android:layout_marginRight="16dp"
              app:cornerRadius="2dp"
              app:iconTint="@color/black_100"
              android:insetTop="0dp"
              android:layout_alignParentRight="true"
              android:insetBottom="0dp"
              android:layout_gravity="right"
              android:id="@+id/btn_my_favorites"
              android:layout_above="@+id/card_recycler"
              android:layout_marginBottom="8dp"
              android:backgroundTint="@color/white"
              app:icon="@drawable/ic_favourites"/>
          <androidx.recyclerview.widget.RecyclerView
              android:id="@+id/card_recycler"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:layout_behavior="@string/appbar_scrolling_view_behavior"
              android:layout_alignParentBottom="true"
              android:orientation="horizontal"></androidx.recyclerview.widget.RecyclerView>

          </LinearLayout>
      </androidx.core.widget.NestedScrollView>
  </androidx.coordinatorlayout.widget.CoordinatorLayout>


</RelativeLayout>
