<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="isLoading"
            type="androidx.databinding.ObservableBoolean" />

        <variable
            name="noResult"
            type="androidx.databinding.ObservableBoolean" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_4"
        android:clickable="true"
        android:fitsSystemWindows="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:orientation="vertical"
            tools:context="suncor.com.android.ui.home.stationlocator.favorites.FavouritesFragment">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?selectableItemBackground"
                android:minWidth="@dimen/min_button_dim"
                android:minHeight="@dimen/min_button_dim"
                android:src="@drawable/ic_back_red" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="36dp"
                android:layout_marginBottom="16dp"
                android:lineHeight="34dp"
                android:text="@string/favourites" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/favoriteRecycler"
                visibleGone="@{!noResult}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:padding="16dp"
                android:visibility="gone"

                tools:visibility="visible"></androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                android:id="@+id/noFavorites"
                visibleGone="@{noResult}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_pin_favourite_gray" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Title2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="@string/no_favourites" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="34dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="24dp"
                    android:lineHeight="26sp"
                    android:text="@string/lorem"
                    android:textColor="@color/black_60"
                    android:textSize="18sp" />

                <com.google.android.material.button.MaterialButton
                    style="@style/SmallButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="24dp"
                    android:paddingLeft="32dp"
                    android:paddingRight="32dp"
                    android:text="@string/add_station"
                    android:textSize="17sp" />

            </LinearLayout>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/favouritesPB"
            visibleGone="@{isLoading}"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
