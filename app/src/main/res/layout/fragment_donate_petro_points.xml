<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.text.Html" />

        <variable
            name="donateAmount"
            type="Integer" />

        <variable
            name="vm"
            type="suncor.com.android.ui.main.rewards.donatepetropoints.donate.DonatePetroPointsViewModel" />


        <variable
            name="image"
            type="android.graphics.drawable.Drawable" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_4"
        android:clickable="true"
        android:paddingTop="15dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/gibson_semibold"
            android:gravity="center"
            android:text="@{@string/donate_points_remaining(vm.getFormattedPoints())}"
            android:textAppearance="@style/Caption1"
            android:textColor="@color/black_60"
            app:layout_constraintBottom_toTopOf="@+id/small_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            tools:text="You have 200.000 points." />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/small_image"
            android:layout_width="162dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:elevation="12dp"
            android:scaleType="fitCenter"
            android:shadowRadius="10"
            android:src="@{image}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/points"
            tools:src="@drawable/logo_petro_canada_caremaker" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="24dp"
            android:background="@color/white"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:layout_constraintBottom_toTopOf="@id/close_button"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="74dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="center"
                    android:lineSpacingMultiplier="1.3"
                    android:maxLines="2"
                    android:paddingBottom="4dp"
                    android:text="@{vm.program.info.title}"
                    android:textAppearance="@style/Title2"
                    android:textColor="@color/black_100"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Petro-Canada CareMakers Foundation" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="center"
                    android:lineSpacingMultiplier="1.33"
                    android:text="@{vm.program.info.message}"
                    android:textAppearance="@style/Body"
                    android:textColor="@color/black_60"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title"
                    tools:text="@string/donate_subtitle_caremakers" />

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/horizontal_divider"
                    app:layout_constraintTop_toBottomOf="@id/subtitle" />

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="21dp"
                    android:fillViewport="true"
                    app:layout_constraintBottom_toTopOf="@id/buy_button"
                    app:layout_constraintTop_toBottomOf="@id/divider">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/redeem_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="24dp"
                            android:layout_marginEnd="16dp"
                            android:gravity="center"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/gibson_semibold"
                                android:maxLines="1"
                                android:text="@string/i_am_donating_x_points"
                                android:textColor="@color/grey_8d8d"
                                android:textSize="20sp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/gibson_semibold"
                                android:maxLines="1"
                                android:text="@{@string/x_points(vm.formattedDonationPoints)}"
                                android:textColor="#eb1d2e"
                                android:textSize="20sp" />
                        </androidx.appcompat.widget.LinearLayoutCompat>


                        <ImageButton
                            android:id="@+id/image_button_decrement"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginStart="36dp"
                            android:background="@android:color/transparent"
                            android:clickable="true"
                            android:focusable="true"
                            android:onClick="@{()->vm.decrementAmount()}"
                            android:src="@{vm.enableDeduction ? @drawable/ic_donate_minus_active : @drawable/ic_donate_minus_disabled}"
                            app:layout_constraintBottom_toBottomOf="@+id/input_layout"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/input_layout" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/input_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="24dp"
                            android:layout_marginEnd="8dp"
                            android:gravity="center"
                            app:layout_constraintEnd_toStartOf="@+id/image_button_increment"
                            app:layout_constraintStart_toEndOf="@+id/image_button_decrement"
                            app:layout_constraintTop_toBottomOf="@+id/redeem_title">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/prefix_currency"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/gibson_regular"
                                android:text="@string/currency_dollar"
                                android:textColor="@color/grey_8d8d"
                                android:textSize="60sp"
                                app:autoSizeTextType="uniform"
                                app:visibleGone="@{!vm.isFrench}" />

                            <!--Warning Warning  -->
                            <!--Selection attribute must always be under text-->
                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/input_field"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:enabled="@{(vm.getPetroPoints()>=1000) ? true : false}"
                                android:fontFamily="@font/gibson_regular"
                                android:gravity="center"
                                android:hint="@string/hint_0"
                                android:inputType="number"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="@{vm.formattedDonationAmount}"
                                android:selection="@{vm.formattedDonationAmount.length()}"
                                android:textColor="@color/grey_8d8d"
                                android:textSize="60sp"
                                app:autoSizeTextType="uniform"
                                tools:text="0" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/postfix_currency"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/gibson_regular"
                                android:text="@string/currency_dollar"
                                android:textColor="@color/grey_8d8d"
                                android:textSize="60sp"
                                app:autoSizeTextType="uniform"
                                app:visibleGone="@{vm.isFrench}"
                                tools:visibility="gone" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <ImageButton
                            android:id="@+id/image_button_increment"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginEnd="36dp"
                            android:background="@android:color/transparent"
                            android:clickable="true"
                            android:focusable="true"
                            android:onClick="@{()->vm.incrementAmount()}"
                            android:src="@{vm.enableIncrement ? @drawable/ic_donate_plus_active : @drawable/ic_donate_plus_disabled}"
                            app:layout_constraintBottom_toBottomOf="@+id/input_layout"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/input_layout" />


                        <View
                            android:id="@+id/divider_2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/expanded_card_balance_margin"
                            android:background="@drawable/horizontal_divider"
                            app:layout_constraintTop_toBottomOf="@+id/input_layout" />


                        <suncor.com.android.ui.common.LinkableTextView
                            android:id="@+id/redeeming_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:gravity="center"
                            android:lineSpacingMultiplier="1.63"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:text="@string/donation_tax_notice"
                            android:textAppearance="@style/Body"
                            android:textColor="@color/black_60"
                            android:textSize="10sp"
                            app:layout_constraintTop_toBottomOf="@+id/divider_2"
                            tools:text="Donation of Petro-Points is not eligible for tax receipts." />


                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.core.widget.NestedScrollView>

                <View
                    android:id="@+id/divider3"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:layout_marginBottom="21dp"
                    android:background="@drawable/merchantshadow"
                    android:visibility="gone"
                    app:layout_constraintBottom_toTopOf="@id/buy_button" />

                <suncor.com.android.ui.common.SuncorButton
                    android:id="@+id/buy_button"
                    style="@style/FilledButton.Red.L"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="21dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:enabled="@{vm.enableDonation}"
                    android:text="@string/donate_points"
                    app:enableDisable="@{vm.enableDonation}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:visibility="visible" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <suncor.com.android.ui.common.SuncorButton
            android:id="@+id/close_button"
            style="@style/LinkButton.Black.ML"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="16dp"
            android:text="@string/rewards_details_close"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
