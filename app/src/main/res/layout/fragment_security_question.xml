<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="suncor.com.android.ui.enrollment.form.ProvinceFragment">

    <suncor.com.android.uicomponents.SuncorAppBarLayout
        android:layout_width="match_parent"
        app:title="@string/enrollment_security_question_title"
        android:id="@+id/app_bar"
        android:layout_height="wrap_content" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:paddingTop="20dp"
        android:paddingBottom="32dp"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_height="wrap_content"
        android:id="@+id/security_question_recycler"
        tools:listitem="@layout/province_item" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>