<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="suncor.com.android.ui.common.cards.CardFormatUtils"/>

        <variable
            name="isGoingBeyondLimit"
            type="androidx.databinding.ObservableBoolean" />

        <variable
            name="availablePoints"
            type="androidx.databinding.ObservableInt" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/separator_fade"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@color/black_4" />

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/radio_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:src="@drawable/radio_button_selector" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/input_field"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".6"
                android:background="@null"
                android:enabled="false"
                android:hint="@string/other_amount"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="8"
                android:textColor="@color/black_80"
                android:textColorHint="@color/black_80"
                android:textSize="16sp"
                app:autoSizeTextType="uniform" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/dollar_off_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_weight=".3"
                android:hint="$0 Off"
                android:textAlignment="textStart"
                android:textColor="@{isGoingBeyondLimit ? @color/red : @color/black_60}"
                android:textSize="16sp"
                app:autoSizeTextType="uniform" />

        </LinearLayout>

        <View
            android:id="@+id/separator_fade_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@color/black_4"
            android:visibility="visible" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/warning_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@{@string/warning_for_beyond_limit_redemption(CardFormatUtils.formatBalance(availablePoints))}"
            android:textAlignment="center"
            android:textColor="@color/red"
            app:visibleGone="@{isGoingBeyondLimit}"
            tools:text="@string/warning_for_beyond_limit_redemption" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/pre_auth_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_error_outline_24px"
            android:drawablePadding="12dp"
            android:padding="16dp"
            android:text="@string/pre_auth_info_tip"
            android:visibility="visible" />


    </LinearLayout>
</layout>