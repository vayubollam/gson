<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="field"
            type="suncor.com.android.ui.enrollement.form.PasswordInputField" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:visibleGone="@{field.showValidationHint}">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/Caption1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/password_validation_title" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/length_validation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:drawableLeft="@{field.hasRightLength?@drawable/ic_check:@drawable/ic_bullet_point}"
            android:drawablePadding="16dp"
            android:drawableTint="@{field.hasRightLength?@color/black_20:@color/black_80}"
            android:paddingLeft="4dp"
            android:text="@string/password_validation_text_length"
            android:textAppearance="@style/Caption1"
            android:textColor="@{field.hasRightLength?@color/black_40:@color/black_80}"
            tools:drawableLeft="@drawable/ic_bullet_point" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/lowercase_validation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:drawableLeft="@{field.hasLowerCase?@drawable/ic_check:@drawable/ic_bullet_point}"
            android:drawablePadding="16dp"
            android:drawableTint="@{field.hasLowerCase?@color/black_20:@color/black_80}"
            android:paddingLeft="4dp"
            android:text="@string/password_validation_lowercase"
            android:textAppearance="@style/Caption1"
            android:textColor="@{field.hasLowerCase?@color/black_40:@color/black_80}"
            tools:drawableLeft="@drawable/ic_bullet_point" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/uppercase_validation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:drawableLeft="@{field.hasUpperCase?@drawable/ic_check:@drawable/ic_bullet_point}"
            android:drawablePadding="16dp"
            android:drawableTint="@{field.hasUpperCase?@color/black_20:@color/black_80}"
            android:paddingLeft="4dp"
            android:text="@string/password_validation_uppercase"
            android:textAppearance="@style/Caption1"
            android:textColor="@{field.hasUpperCase?@color/black_40:@color/black_80}"
            tools:drawableLeft="@drawable/ic_bullet_point" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/number_validation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:drawableLeft="@{field.hasNumber?@drawable/ic_check:@drawable/ic_bullet_point}"
            android:drawablePadding="16dp"
            android:drawableTint="@{field.hasNumber?@color/black_20:@color/black_80}"
            android:paddingLeft="4dp"
            android:text="@string/password_validation_number"
            android:textAppearance="@style/Caption1"
            android:textColor="@{field.hasNumber?@color/black_40:@color/black_80}"
            tools:drawableLeft="@drawable/ic_bullet_point" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/special_char_validation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:drawableLeft="@{field.hasSpecialChar?@drawable/ic_check:@drawable/ic_bullet_point}"
            android:drawablePadding="16dp"
            android:drawableTint="@{field.hasSpecialChar?@color/black_20:@color/black_80}"
            android:paddingLeft="4dp"
            android:text="@string/password_validation_special_char"
            android:textAppearance="@style/Caption1"
            android:textColor="@{field.hasSpecialChar?@color/black_40:@color/black_80}"
            tools:drawableLeft="@drawable/ic_bullet_point" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/horizontal_divider" />

    </LinearLayout>
</layout>