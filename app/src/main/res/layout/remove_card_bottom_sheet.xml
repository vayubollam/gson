<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/modal_dialog_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:id="@+id/remove_area"
            android:paddingBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/remove_card_message_divider"
            android:clickable="true"
            android:focusable="true"
            android:background="?selectableItemBackground"
            android:layout_height="0dp">

            <ImageButton
                android:id="@+id/delete_icon"
                android:layout_width="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="22dp"
                android:background="@android:color/transparent"
                android:tint="@color/black_60"
                android:scaleType="center"
                android:src="@drawable/ic_bin_red"
                android:layout_height="24dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/remove_card_title"
                android:layout_width="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/delete_icon"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="22dp"
                android:layout_marginStart="22dp"
                android:textAppearance="@style/Body"
                android:fontFamily="@font/gibson_semibold"
                android:text="@string/card_remove_bottom_sheet_title"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:id="@+id/remove_card_message"
                android:text="@string/card_remove_bottom_sheet_message"
                app:layout_constraintStart_toStartOf="@id/remove_card_title"
                app:layout_constraintTop_toBottomOf="@id/remove_card_title"
                android:layout_height="wrap_content" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/remove_card_message_divider"
            app:layout_constraintTop_toBottomOf="@id/remove_area"
            android:src="@drawable/horizontal_divider"
            android:layout_height="1dp" />

        <suncor.com.android.ui.common.SuncorButton
            android:layout_width="wrap_content"
            style="@style/LinkButton.Black.ML"
            android:layout_margin="4dp"
            android:textColor="@color/blue"
            android:id="@+id/cancel_button"
            android:text="@string/card_remove_bottom_sheet_cancel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/remove_card_message_divider"
            android:layout_height="wrap_content" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>