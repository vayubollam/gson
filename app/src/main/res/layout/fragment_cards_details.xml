<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="numCards"
            type="Integer" />

        <variable
            name="isRemoving"
            type="androidx.databinding.ObservableBoolean" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_4"
        android:clickable="true"
        android:gravity="center">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/card_detail_recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            app:layout_constraintBottom_toTopOf="@+id/page_indicator"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/petro_canada_expanded_card_item"/>

        <suncor.com.android.uicomponents.pagerindicator.CircleIndicator
            android:id="@+id/page_indicator"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            app:ci_drawable="@drawable/black_radius"
            app:ci_drawable_unselected="@drawable/white_radius"
            app:ci_height="8dp"
            app:ci_width="8dp"
            app:visibleGone="@{numCards!=1}"
            android:layout_marginTop="@dimen/expanded_card_pagination_margin"
            app:layout_constraintBottom_toTopOf="@+id/button_close"
            app:layout_constraintTop_toBottomOf="@+id/card_detail_recycler"/>


        <suncor.com.android.ui.common.SuncorButton
            android:id="@+id/button_close"
            style="@style/LinkButton.Black.ML"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginStart="84dp"
            android:layout_marginTop="@dimen/expanded_card_bottom_margin"
            android:layout_marginEnd="84dp"
            android:layout_marginBottom="@dimen/expanded_card_bottom_margin"
            android:text="@string/cards_details_close"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/page_indicator" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/progress_layout"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:clickable="true"
            tools:visibility="gone"
            app:visibleGone="@{isRemoving}"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/progress_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_bin_red" />

            <ProgressBar
                android:id="@+id/remove_card_pb"
                android:layout_width="84dp"
                android:layout_height="84dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/progressContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/removing_card"
                android:textAppearance="@style/Title1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/remove_card_pb"
                android:layout_marginBottom="32dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>