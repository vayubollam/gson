<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="numCards"
            type="Integer" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_4"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/card_detail_recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:paddingStart="12dp"
            android:paddingTop="40dp"
            android:paddingEnd="12dp"
            app:layout_constraintBottom_toTopOf="@+id/page_indicator"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/petro_canada_expanded_card_item"></androidx.recyclerview.widget.RecyclerView>

        <suncor.com.android.uicomponents.pagerindicator.CircleIndicator
            android:id="@+id/page_indicator"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            app:ci_drawable="@drawable/black_radius"
            app:ci_drawable_unselected="@drawable/white_radius"
            app:ci_height="8dp"
            app:ci_width="8dp"
            app:visibleGone="@{numCards!=1}"
            android:layout_marginTop="@dimen/expanded_card_pagination_margin"
            app:layout_constraintBottom_toTopOf="@+id/button_close"
            app:layout_constraintTop_toBottomOf="@+id/card_detail_recycler"></suncor.com.android.uicomponents.pagerindicator.CircleIndicator>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_close"
            style="@style/LinkButton.Black.ML"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginStart="84dp"
            android:layout_marginTop="@dimen/expanded_card_bottom_margin"
            android:layout_marginEnd="84dp"
            android:layout_marginBottom="@dimen/expanded_card_bottom_margin"
            android:text="Close"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/page_indicator" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>