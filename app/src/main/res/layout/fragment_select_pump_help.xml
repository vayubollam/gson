<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:id="@+id/tutorial_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/gibson_semibold"
        android:gravity="center"
        android:textColor="@color/black_80"
        android:textSize="22sp"
        android:text="@string/select_pump_help_header" />

    <TextView
        android:id="@+id/tutorial_subheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/gibson_regular"
        android:gravity="center"
        android:textColor="@color/black_80"
        android:textSize="16sp"
        android:text="@string/select_pump_help_subheader" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tutorial_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="24dp"
        android:background="@color/white"
        android:gravity="center"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        tools:listitem="@layout/tutorial_screen_listitem" />

    <suncor.com.android.uicomponents.pagerindicator.CircleIndicator
        android:id="@+id/page_indicator"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:ci_drawable="@drawable/black_radius"
        app:ci_drawable_unselected="@drawable/white_radius"
        app:ci_height="8dp"
        app:ci_width="8dp"
        android:layout_marginBottom="16dp" />

    <suncor.com.android.ui.common.SuncorButton
        android:id="@+id/button_close"
        style="@style/LinkButton.Black.ML"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginStart="84dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="24dp"
        android:background="@color/white"
        android:text="@string/ok" />

</LinearLayout>