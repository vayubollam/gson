<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true">

        <suncor.com.android.uicomponents.SuncorAppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp"
            app:expandable="false"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/gibson_semibold"
            android:lineSpacingMultiplier="1.1"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/vacuum_barcode_header"
            android:textColor="@color/black_80"
            android:textSize="@dimen/carwash_barcode_title"
            app:layout_constraintTop_toBottomOf="@id/app_bar" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gibson_regular"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:paddingRight="16dp"
            android:text="@string/carwash_barcode_subtitle"
            android:textColor="@color/black_60"
            android:textSize="@dimen/carwash_barcode_subtitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/button_close"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subtitle">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bar_code_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/bar_code_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/carwash_barcode_image_height"
                    android:adjustViewBounds="true"
                    android:paddingLeft="20dp"
                    android:paddingTop="24dp"
                    android:paddingRight="20dp"
                    android:scaleType="fitXY"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/barcode_number_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/gibson_semibold"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColor="@color/black_80"
                    android:textSize="18sp"
                    tools:text="3445"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/bar_code_image" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="@dimen/carwash_barcode_divider_padding"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="@dimen/carwash_barcode_divider_padding"
                android:src="@drawable/horizontal_divider"
                app:layout_constraintBottom_toTopOf="@id/bar_code_button_group"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bar_code_group"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/have_trouble_single_ticket_text"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_marginTop="48dp"
                android:fontFamily="@font/gibson_regular"
                android:gravity="center"
                android:lineSpacingMultiplier="1.5"
                android:text="@string/single_ticket_barcode_trouble_message"
                android:textColor="@color/black_60"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bar_code_group" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bar_code_button_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                >

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/security_pin_text"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:fontFamily="@font/gibson_semibold"
                    android:letterSpacing="0.05"
                    android:text=""
                    android:visibility="gone"
                    android:textColor="@color/black_100"
                    android:textSize="22sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="122334" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/have_trouble_text"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/gibson_regular"
                    android:text="@string/carwash_barcode_trouble_hint"
                    android:textColor="@color/black_80"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/security_pin_text" />

                <suncor.com.android.ui.common.SuncorButton
                    android:id="@+id/re_enter_button"
                    style="@style/LinkButton.Red.M"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:visibility="gone"
                    android:layout_marginTop="0dp"
                    android:text="@string/carwash_barcode_reenter"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/have_trouble_text" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <suncor.com.android.ui.common.SuncorButton
            android:id="@+id/button_close"
            style="@style/LinkButton.Black.ML"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginStart="84dp"
            android:layout_marginEnd="84dp"
            android:layout_marginBottom="16dp"
            android:text="@string/cards_details_close"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>