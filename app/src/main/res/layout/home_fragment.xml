<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="suncor.com.android.ui.home.dashboard.DashboardFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/card_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/station_card"
        android:background="@color/white"
        android:backgroundTint="@color/white"></androidx.recyclerview.widget.RecyclerView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/station_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:elevation="12dp"
        android:padding="16dp"
        app:cardCornerRadius="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/station_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_bottom_sheet"
                android:layout_margin="16dp"
                android:text="@string/nearby"
                android:textColor="@color/black_100"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_below="@id/station_title_text"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/img_car_station" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_car_station"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_below="@+id/station_title_text"
                android:layout_marginLeft="16dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/station_title_text"
                app:srcCompat="@drawable/ic_car" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/distance_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/station_title_text"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/img_car_station"
                android:gravity="center"
                android:text="0.5 Km away . 2 min drive"
                android:textColor="@color/black_100"
                android:textSize="14sp"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/open_hours_text"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_below="@+id/img_car_station"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_car_station"
                app:srcCompat="@drawable/ic_clock" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_station_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_car_station"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/open_hours_text"
                android:gravity="center"
                android:textColor="@color/black_100"
                android:textSize="14sp"
                app:layout_constraintLeft_toRightOf="@+id/img_car_station"
                app:layout_constraintTop_toBottomOf="@+id/distance_text"
                tools:text="Open . Closes at 10PM" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/directions_button"
                style="@style/LinkButton"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/small_button_height"
                android:layout_below="@+id/open_hours_text"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@android:color/transparent"
                android:text="@string/directions_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/open_hours_text" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>


</RelativeLayout>
