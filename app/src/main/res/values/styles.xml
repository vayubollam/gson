<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="chipStyle">@style/ChipStyle</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
 </style>

 <!-- custom Base application theme. -->
    <style name="CustomAppThemeForSplash" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="FullScreenDialog" parent="AppTheme">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="colorPrimaryDark">@color/black_4</item>
        <!--<item name="android:windowBackground">@android:color/transparent</item>-->
    </style>

    <style name="alertLocation" parent="@style/Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="StationDetailsDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/StationDetailsSheetStyle</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="StationDetailsSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TitleStyle" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/gibson_semibold</item>
        <item name="android:textColor">@color/black_100</item>
    </style>

    <style name="SubtitleStyle" parent="@style/TextAppearance.AppCompat.Headline">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/gibson_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black_100</item>
    </style>

    <style name="NormalText" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/gibson_regular</item>
        <item name="android:textColor">@color/black_100</item>
    </style>

    <style name="SecondaryText" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/gibson_regular</item>
        <item name="android:textColor">@color/black_60</item>
    </style>

    <style name="ChipStyle" parent="Base.Widget.MaterialComponents.Chip">
        <item name="android:textAppearance">@style/ChipTextAppearance</item>
        <item name="android:textColor">@color/black_60</item>
        <item name="closeIcon">@drawable/ic_close</item>
        <item name="closeIconTint">@color/black_100</item>
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipCornerRadius">6dp</item>
        <item name="closeIconEnabled">true</item>
    </style>

    <style name="ChipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/gibson_semibold</item>
    </style>

    <style name="BorderedButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="fontFamily">@font/gibson_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_100</item>
        <item name="strokeColor">@color/black_80</item>
    </style>

    <style name="ColoredButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:backgroundTint">@color/red_pb</item>
        <item name="fontFamily">@font/gibson_semibold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SearchTextNormal" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/gibson_regular</item>
        <item name="android:textColorHint">@color/black_40</item>
        <item name="android:textColor">@color/black_100</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_left</item>
        <item name="android:windowExitAnimation">@anim/slide_right</item>
    </style>

    <style name="FiltersDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>
</resources>
