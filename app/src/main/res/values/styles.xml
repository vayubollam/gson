<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- custom Base application theme. -->
    <style name="CustomAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- custom Base application theme. -->
    <style name="CustomAppThemeForSplash" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style
        name="DiscoverYourNextA" parent="@style/Widget.AppCompat.TextView">
        <item name="android:fontFamily">Futura Std</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style		name="DriveSafely"		parent="@style/Widget.AppCompat.TextView">
        <item name="android:fontFamily">Gibson</item>
        <item name="android:textColor">#CC000000</item>
        <item name="android:textSize">22sp</item>	</style>
    <style		name="DonTUseYourPhone"		parent="@style/Widget.AppCompat.TextView">
        <item name="android:fontFamily">Gibson</item>
        <item name="android:textColor">#99000000</item>
        <item name="android:textSize">18sp</item>	</style>
    
    <style name="alertLocation" parent="@style/Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

    </style>

</resources>
