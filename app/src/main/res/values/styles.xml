<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="chipStyle">@style/ChipStyle</item>
        <item name="android:textColorPrimary">@color/black_80</item>
        <item name="android:textColorSecondary">@color/black_60</item>
        <item name="alertDialogTheme">@style/AlertDialogStyle</item>
        <item name="suncorTextInputStyle">@style/TextInputLayoutStyle</item>
        <item name="checkboxStyle">@style/CheckBoxStyle</item>
        <item name="suncorAppBarLayoutStyle">@style/AppBarStyle</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="SplashScreenTheme" parent="AppTheme">
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowDisablePreview">true</item>
    </style>


    <!-- Text appearances -->
    <style name="Headline1" parent="Base.TextAppearance.AppCompat.Headline">
        <item name="fontFamily">@font/gibson_semibold</item>
        <item name="android:textSize">42sp</item>
    </style>

    <style name="Headline2" parent="Base.TextAppearance.AppCompat.Headline">
        <item name="fontFamily">@font/gibson_semibold</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="Title1" parent="Base.TextAppearance.AppCompat.Headline">
        <item name="android:fontFamily">@font/gibson_semibold</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/black_80</item>
    </style>

    <style name="Title2" parent="Base.TextAppearance.AppCompat.Headline">
        <item name="android:fontFamily">@font/gibson_semibold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black_80</item>
    </style>

    <style name="Body" parent="@style/Base.TextAppearance.AppCompat.Body1">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/gibson_regular</item>
        <item name="android:textColor">@color/black_80</item>
    </style>

    <style name="Caption1" parent="@style/Base.TextAppearance.AppCompat.Caption">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/gibson_regular</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Caption1.Red" parent="Caption1">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="Caption2" parent="@style/Base.TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/gibson_regular</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="Body.Input">
        <item name="android:textColor">@color/black_80</item>
    </style>

    <style name="ChipTextAppearance" parent="Caption1">
        <item name="fontFamily">@font/gibson_semibold</item>
    </style>

    <style name="SectionTitle" parent="@style/Caption1">
        <item name="android:textColor">@color/black_60</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!--end text appearances-->

    <!-- Button styles -->

    <style name="FilledButton" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="fontFamily">@font/gibson_semibold</item>
        <item name="android:lines">1</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="FilledButton.Red">
        <item name="backgroundTint">@color/red</item>
        <item name="rippleColor">@color/red_pressed</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FilledButton.Red.L">
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">72dp</item>
    </style>

    <style name="FilledButton.Red.ML">
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">44dp</item>
        <item name="android:minWidth">72dp</item>
    </style>

    <style name="FilledButton.Red.M">
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:minWidth">64dp</item>
    </style>

    <style name="FilledButton.Red.S">
        <item name="android:textSize">12sp</item>
        <item name="android:minWidth">56dp</item>
        <item name="android:minHeight">28dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

    <style name="FilledButton.White">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black_100</item>
        <item name="rippleColor">@color/black_8</item>
    </style>

    <style name="FilledButton.White.L">
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">72dp</item>
    </style>

    <style name="FilledButton.White.ML">
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">44dp</item>
        <item name="android:minWidth">72dp</item>
    </style>

    <style name="FilledButton.White.M">
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:minWidth">64dp</item>
    </style>

    <style name="FilledButton.White.S">
        <item name="android:textSize">12sp</item>
        <item name="android:minWidth">56dp</item>
        <item name="android:minHeight">28dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

    <style name="LinkButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="fontFamily">@font/gibson_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:lines">1</item>
    </style>

    <style name="LinkButton.Black">
        <item name="android:textColor">@color/black_100</item>
    </style>

    <style name="LinkButton.Black.L">
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">72dp</item>
    </style>

    <style name="LinkButton.Black.ML">
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">44dp</item>
        <item name="android:minWidth">72dp</item>
    </style>

    <style name="LinkButton.Black.M">
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:minWidth">64dp</item>
    </style>

    <style name="LinkButton.Black.S">
        <item name="android:textSize">12sp</item>
        <item name="android:minWidth">56dp</item>
        <item name="android:minHeight">28dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

    <style name="LinkButton.Red">
        <item name="android:textColor">@color/red</item>
        <item name="rippleColor">@color/red_link_button_pressed</item>
    </style>

    <style name="LinkButton.Red.L">
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">72dp</item>
    </style>

    <style name="LinkButton.Red.ML">
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">44dp</item>
        <item name="android:minWidth">72dp</item>
    </style>

    <style name="LinkButton.Red.M">
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

    <style name="LinkButton.Red.S">
        <item name="android:textSize">12sp</item>
        <item name="android:minWidth">56dp</item>
        <item name="android:minHeight">28dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

    <style name="OutlinedButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="fontFamily">@font/gibson_semibold</item>
        <item name="android:textColor">@color/black_100</item>
        <item name="strokeColor">@color/black_40</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="rippleColor">@color/black_8</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:lines">1</item>
    </style>

    <style name="OutlinedButton.L">
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">72dp</item>
    </style>

    <style name="OutlinedButton.ML">
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">44dp</item>
        <item name="android:minWidth">72dp</item>
    </style>

    <style name="OutlinedButton.M">
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:minWidth">64dp</item>
    </style>

    <style name="OutlinedButton.S">
        <item name="android:textSize">12sp</item>
        <item name="android:minWidth">56dp</item>
        <item name="android:minHeight">28dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>
    <!-- End Button styles -->


    <style name="StationDetailsDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/StationDetailsSheetStyle</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="StationDetailsSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ChipStyle" parent="Base.Widget.MaterialComponents.Chip">
        <item name="android:textAppearance">@style/ChipTextAppearance</item>
        <item name="android:textColor">@color/black_60</item>
        <item name="closeIcon">@drawable/ic_close</item>
        <item name="closeIconTint">@color/black_100</item>
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipCornerRadius">6dp</item>
        <item name="closeIconEnabled">true</item>
    </style>

    <!-- Dialog -->
    <style name="AlertDialogStyle" parent="@style/Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorAccent">@color/blue</item>
        <item name="android:background">@drawable/dialog_background</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:textColorPrimary">@color/black_100</item>
        <item name="android:textColorSecondary">@color/black_80</item>
        <item name="buttonBarButtonStyle">@style/DialogButtonStyle</item>
        <item name="android:windowTitleStyle">@style/DialogWindowTitleStyle</item>
        <item name="windowFixedWidthMinor">80%</item>
        <item name="android:titleCondensed">All</item>
    </style>

    <style name="DialogWindowTitleStyle" parent="Base.DialogWindowTitle.AppCompat">
        <item name="android:textAppearance">@style/Title2</item>
        <item name="android:fontFamily">@font/gibson_semibold</item>
    </style>

    <style name="TextAppearance.AppCompat.Subhead" parent="Body">
        <item name="android:textColor">@color/black_80</item>
        <item name="android:lineSpacingMultiplier">1.30</item>
    </style>

    <style name="DialogButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="fontFamily">@font/gibson_semibold</item>
    </style>

    <!-- end dialog -->

    <style name="BottomSheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme.TextInput" parent="ThemeOverlay.MaterialComponents.TextInputEditText">
        <item name="colorControlNormal">@color/black_40</item>
        <item name="colorControlActivated">@color/black_80</item>
        <item name="editTextStyle">@style/EditTextStyle</item>
    </style>

    <style name="TextInputLayoutStyle">
        <item name="android:textAppearance">@style/Body.Input</item>
        <item name="errorColor">@color/red</item>
        <item name="errorDrawable">@drawable/ic_alert</item>
        <item name="errorTextAppearance">@style/Caption1</item>
        <item name="hintTextAppearance">@style/Caption1</item>
        <item name="hintTextColor">@color/black_60</item>
        <item name="passwordToggleTint">@color/black_60</item>
    </style>

    <style name="CheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:paddingStart">12dp</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:paddingStart">2dp</item>
    </style>

    <style name="AppBarStyle">
        <item name="titleAppearance">@style/Title2</item>
        <item name="expandedTitleAppearance">@style/Title1</item>
    </style>

    <style name="Widget.MaterialComponents.BottomNavigationView.SuncorBottomNavigationView">
        <item name="android:fontFamily">@font/gibson_regular</item>
        <item name="itemTextAppearanceActive">@style/Caption1</item>
        <item name="itemTextAppearanceInactive">@style/Caption1</item>
        <item name="itemIconTint">@color/bottom_nav_item_tint</item>
        <item name="itemTextColor">@color/bottom_nav_item_tint</item>
    </style>

</resources>
