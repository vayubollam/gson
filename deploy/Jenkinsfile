pipeline {
	agent any
	tools {
		// Set names in Global Tools:
		gradle 'Gradle5.1'
	}
	stages {
		stage('Compile and Build  Stage') {
			steps {
				sh './gradlew assembleDebug'
			}
		}

		stage('Testing Stage') {
			steps {
				sh 'echo "TEST HERE"'
			}
		}

	}

	post {
		always {
			archiveArtifacts artifacts: '**/build/outputs/apk/debug/*.apk', fingerprint: true
//			junit 'build/reports/**/*.xml'
		}
	}
}
